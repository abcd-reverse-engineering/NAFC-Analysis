<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <gradient
                android:startColor="#3f5cff"
                android:endColor="#2946e6"
                android:angle="90"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#3f5cff"
                android:endColor="#2946e6"
                android:angle="90"/>
        </shape>
    </item>
    <item android:state_checkable="true">
        <shape>
            <gradient
                android:startColor="#3f5cff"
                android:endColor="#2946e6"
                android:angle="90"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <gradient
                android:startColor="#3f5cff"
                android:endColor="#2946e6"
                android:angle="90"/>
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <gradient
                android:startColor="#3f5cff"
                android:endColor="#2946e6"
                android:angle="90"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <gradient
                android:startColor="@color/list_divider_color"
                android:endColor="@color/list_divider_color"
                android:angle="90"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/list_divider_color"
                android:endColor="@color/list_divider_color"
                android:angle="90"/>
        </shape>
    </item>
</selector>
