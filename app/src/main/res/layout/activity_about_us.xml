<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_view"
                android:background="@mipmap/ic_blue_bg_big"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/imageview"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_80"
                    android:src="@drawable/logo_about_us"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:textSize="19sp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/app_name"
                    android:layout_below="@+id/imageview"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="打击防范电信网络诈骗"
                    android:layout_below="@+id/tv_app_name"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_context"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/rl_view">
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/tv_sdk_version"
                    android:background="@color/blue"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="#1d1a33"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="当前版本号："/>
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="#999999"
                        android:gravity="center"
                        android:id="@+id/tv_app_version"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="11sp"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:id="@+id/tv_new_tips"
                        android:background="@drawable/iv_version_bg"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="最新"/>
                </LinearLayout>
                <View
                    android:background="@color/divide_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:id="@+id/ll_agreement"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="#1d1a33"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="服务协议："
                        android:layout_weight="1"/>
                    <ImageView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/arrow_gray_right"/>
                </LinearLayout>
                <View
                    android:background="@color/divide_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:id="@+id/ll_policy"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="#1d1a33"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="隐私政策："
                        android:layout_weight="1"/>
                    <ImageView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/arrow_gray_right"/>
                </LinearLayout>
                <View
                    android:background="@color/divide_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="#1d1a33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="版权所有："
                        android:layout_centerVertical="true"/>
                    <View
                        android:background="@drawable/button_bg_blue_ligth"
                        android:visibility="gone"
                        android:layout_width="@dimen/dp_3"
                        android:layout_height="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_toLeftOf="@+id/tv_polic"
                        android:layout_alignTop="@+id/tv_polic"/>
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="#999999"
                        android:gravity="right"
                        android:id="@+id/tv_polic"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="公安部打击治理电信网络\10新型违法犯罪查控中心"
                        android:layout_alignParentRight="true"
                        android:lineSpacingExtra="@dimen/dp_5"/>
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="#999999"
                        android:gravity="center"
                        android:id="@+id/tv_owner_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="国家反诈中心"
                        android:layout_below="@+id/tv_polic"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View
                    android:background="@color/divide_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="#1d1a33"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="技术支持："
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="#999999"
                        android:gravity="center"
                        android:id="@+id/tv_tech_sup"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:text="国家互联网应急中心"/>
                </LinearLayout>
                <View
                    android:background="@color/divide_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>
            <Button
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/check_upadte"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:text="检查更新"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                style="@style/buttonCrop"/>
        </LinearLayout>
        <include layout="@layout/rl_title_with_white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
