<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/page_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/rl_title_with_back"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/ns_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_above="@+id/tv_confirm"
        android:layout_below="@+id/rl_title">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/bg_white_crop_head"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/iv_tag"
                    android:background="@drawable/group_item_bg"
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_15"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/red"
                    android:layout_gravity="center"
                    android:layout_width="6dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginTop="2dp"
                    android:text="*"/>
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    android:textColor="@color/black_dark"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_payment_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:text="涉案账户"/>
            </LinearLayout>
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0.5dp">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="#666666"
                    android:id="@+id/tv_payment_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:text="转账方式"/>
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black_dark"
                    android:gravity="center"
                    android:id="@+id/tv_payment_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:hint="请选择"
                    android:drawableRight="@mipmap/arrow_gray_right"
                    android:drawablePadding="@dimen/dp_5"
                    app:layout_constrainedWidth="true"/>
            </LinearLayout>
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0.5dp">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="#666666"
                    android:id="@+id/tv_time_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:text="转账时间"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_time"
                    app:layout_constraintLeft_toRightOf="@+id/tv_time_tag"
                    app:layout_constraintTop_toTopOf="@+id/tv_time"/>
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black_dark"
                    android:gravity="center"
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:hint="请选择"
                    android:drawableRight="@mipmap/arrow_gray_right"
                    android:drawablePadding="@dimen/dp_5"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintLeft_toRightOf="@+id/tv_time_lable"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_payment_type"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_amount"
                android:background="@color/white"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0.5dp">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="#666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="转账金额"
                    android:layout_marginStart="@dimen/dp_13"/>
                <EditText
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black_dark"
                    android:gravity="center"
                    android:id="@+id/et_amount"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:hint="请输入转账金额"
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLength="16"
                    android:inputType="numberDecimal"/>
            </LinearLayout>
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0.5dp">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="#666666"
                    android:id="@+id/tv_victim_type_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:text="受害人账户类型"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_victim_type"
                    app:layout_constraintLeft_toRightOf="@+id/tv_victim_type_tag"
                    app:layout_constraintTop_toTopOf="@+id/tv_victim_type"/>
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black_dark"
                    android:gravity="center"
                    android:id="@+id/tv_victim_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:hint="请选择"
                    android:drawableRight="@mipmap/arrow_gray_right"
                    android:drawablePadding="@dimen/dp_5"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintLeft_toRightOf="@+id/tv_victim_type_lable"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_time"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/group_victim"
                android:background="@color/white"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0.5dp">
                <TextView
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/red"
                    android:id="@+id/tv_victim_other_tag"
                    android:layout_width="6dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="2dp"
                    android:text="*"
                    app:layout_constraintBottom_toBottomOf="@+id/et_victim_other"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/et_victim_other"/>
                <EditText
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black_dark"
                    android:textColorHint="@color/_7b8ffb"
                    android:id="@+id/et_victim_other"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginRight="@dimen/dp_10"
                    android:hint="请输入类型名称"
                    android:drawablePadding="@dimen/dp_5"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintLeft_toRightOf="@+id/tv_victim_other_tag"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_victim_type"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/bg_white_crop_foot"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0.5dp">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="#666666"
                    android:id="@+id/tv_victim_account_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:text="受害人账号"
                    app:layout_constraintBottom_toBottomOf="@+id/et_victim_account"
                    app:layout_constraintLeft_toRightOf="@+id/tv_victim_account_tag"
                    app:layout_constraintTop_toTopOf="@+id/et_victim_account"/>
                <EditText
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black_dark"
                    android:gravity="center"
                    android:id="@+id/et_victim_account"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:hint="请输入受害人账号"
                    android:maxLength="50"
                    android:drawablePadding="@dimen/dp_5"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintLeft_toRightOf="@+id/tv_victim_account_lable"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_victim_other"/>
            </LinearLayout>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/colorRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="提示：嫌疑人账户及转账汇款凭证至少填写一项"/>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/bg_white_crop_head"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/group_item_bg"
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_15"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    android:textColor="@color/black_dark"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="嫌疑人账户"/>
            </LinearLayout>
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0.5dp">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="#666666"
                    android:id="@+id/tv_suspect_type_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:text="嫌疑人账户类型"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_suspect_type"
                    app:layout_constraintLeft_toRightOf="@+id/tv_suspect_type_tag"
                    app:layout_constraintTop_toTopOf="@+id/tv_suspect_type"/>
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black_dark"
                    android:gravity="center"
                    android:id="@+id/tv_suspect_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:hint="请选择"
                    android:drawableRight="@mipmap/arrow_gray_right"
                    android:drawablePadding="@dimen/dp_5"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintLeft_toRightOf="@+id/tv_suspect_type_lable"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_victim_account"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/group_suspect"
                android:background="@color/white"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0.5dp">
                <TextView
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/red"
                    android:id="@+id/tv_suspect_other_tag"
                    android:layout_width="6dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:text="*"
                    app:layout_constraintBottom_toBottomOf="@+id/et_suspect_other"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/et_suspect_other"/>
                <EditText
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black_dark"
                    android:textColorHint="@color/_7b8ffb"
                    android:id="@+id/et_suspect_other"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginRight="@dimen/dp_10"
                    android:hint="请输入类型名称"
                    android:drawablePadding="@dimen/dp_5"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintLeft_toRightOf="@+id/tv_suspect_other_tag"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_suspect_type"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/group_suspect_name"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0.5dp">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="#666666"
                    android:id="@+id/tv_suspect_account_name_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:text="嫌疑人账户名"
                    app:layout_constraintBottom_toBottomOf="@+id/et_suspect_account"
                    app:layout_constraintLeft_toRightOf="@+id/tv_suspect_account_tag"
                    app:layout_constraintTop_toTopOf="@+id/et_suspect_account"/>
                <EditText
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black_dark"
                    android:gravity="center"
                    android:id="@+id/et_suspect_account_name"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:hint="请输入嫌疑人账户名"
                    android:maxLength="100"
                    android:drawablePadding="@dimen/dp_5"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintLeft_toRightOf="@+id/tv_suspect_account_lable"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_suspect_other"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/bg_white_crop_foot"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0.5dp">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="#666666"
                    android:id="@+id/tv_suspect_account_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:text="嫌疑人账号"
                    app:layout_constraintBottom_toBottomOf="@+id/et_suspect_account"
                    app:layout_constraintLeft_toRightOf="@+id/tv_suspect_account_tag"
                    app:layout_constraintTop_toTopOf="@+id/et_suspect_account"/>
                <EditText
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black_dark"
                    android:gravity="center"
                    android:id="@+id/et_suspect_account"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:hint="请输入嫌疑人账号"
                    android:maxLength="50"
                    android:drawablePadding="@dimen/dp_5"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintLeft_toRightOf="@+id/tv_suspect_account_lable"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_suspect_other"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/bg_white_crop_head"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/group_item_bg"
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_15"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    android:textColor="@color/black_dark"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="转账汇款凭证"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toBottomOf="@+id/tv_picture_lable"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/sp_14"
                android:id="@+id/tv_tip"
                android:background="@drawable/bg_white_crop_foot"
                android:paddingLeft="@dimen/dp_18"
                android:paddingTop="15dp"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="最多可选择200张图片"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerview"/>
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:id="@+id/tv_confirm"
                android:background="@drawable/button_bg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="保存"
                android:layout_alignParentBottom="true"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
