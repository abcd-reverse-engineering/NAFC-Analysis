<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/page_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/rl_title_with_back"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/ns_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_below="@+id/rl_title">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/bg_white_crop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_tag"
                android:background="@drawable/group_item_bg"
                android:layout_width="@dimen/dp_3"
                android:layout_height="@dimen/dp_15"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@+id/tv_payment_label"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_payment_label"/>
            <TextView
                android:textSize="@dimen/dp_15"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="*"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_tag"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                android:textColor="@color/black_dark"
                android:gravity="center_vertical"
                android:id="@+id/tv_payment_label"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="涉案账户"
                app:layout_constraintLeft_toRightOf="@+id/iv_tag"
                app:layout_constraintTop_toTopOf="parent"/>
            <View
                android:background="@color/div_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_payment_label"/>
            <TextView
                android:textSize="@dimen/dp_15"
                android:textColor="@color/red"
                android:id="@+id/tv_payment_tag"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="*"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_payment_lable"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="#666666"
                android:id="@+id/tv_payment_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="转账方式"
                app:layout_constraintBottom_toBottomOf="@+id/tv_payment_type"
                app:layout_constraintLeft_toRightOf="@+id/tv_payment_tag"
                app:layout_constraintTop_toTopOf="@+id/tv_payment_type"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black_dark"
                android:gravity="center"
                android:id="@+id/tv_payment_type"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:hint="请选择"
                android:drawablePadding="@dimen/dp_5"
                app:layout_constrainedWidth="true"
                app:layout_constraintLeft_toRightOf="@+id/tv_payment_lable"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_payment_label"/>
            <View
                android:background="@color/div_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_payment_type"/>
            <TextView
                android:textSize="@dimen/dp_15"
                android:textColor="@color/red"
                android:id="@+id/tv_time_tag"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="*"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_time_lable"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="#666666"
                android:id="@+id/tv_time_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="转账时间"
                app:layout_constraintBottom_toBottomOf="@+id/tv_time"
                app:layout_constraintLeft_toRightOf="@+id/tv_time_tag"
                app:layout_constraintTop_toTopOf="@+id/tv_time"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black_dark"
                android:gravity="center"
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:hint="请选择"
                android:drawablePadding="@dimen/dp_5"
                app:layout_constrainedWidth="true"
                app:layout_constraintLeft_toRightOf="@+id/tv_time_lable"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_payment_type"/>
            <View
                android:background="@color/div_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_time"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="#666666"
                android:id="@+id/tv_amount_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="转账金额"
                app:layout_constraintBottom_toBottomOf="@+id/tv_amount"
                app:layout_constraintLeft_toRightOf="@+id/tv_time_tag"
                app:layout_constraintTop_toTopOf="@+id/tv_amount"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black_dark"
                android:gravity="center"
                android:id="@+id/tv_amount"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:hint="转账金额"
                android:maxLength="16"
                android:drawablePadding="@dimen/dp_5"
                app:layout_constrainedWidth="true"
                app:layout_constraintLeft_toRightOf="@+id/tv_time_lable"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_time"/>
            <View
                android:id="@+id/line_amount"
                android:background="@color/div_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_amount"/>
            <TextView
                android:textSize="@dimen/dp_15"
                android:textColor="@color/red"
                android:id="@+id/tv_victim_type_tag"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="*"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_victim_type_lable"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="#666666"
                android:id="@+id/tv_victim_type_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="受害人账户类型"
                app:layout_constraintBottom_toBottomOf="@+id/tv_victim_type"
                app:layout_constraintLeft_toRightOf="@+id/tv_victim_type_tag"
                app:layout_constraintTop_toTopOf="@+id/tv_victim_type"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black_dark"
                android:gravity="center"
                android:id="@+id/tv_victim_type"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:hint="请选择"
                android:drawablePadding="@dimen/dp_5"
                app:layout_constrainedWidth="true"
                app:layout_constraintLeft_toRightOf="@+id/tv_victim_type_lable"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_amount"/>
            <View
                android:background="@color/div_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_victim_type"/>
            <TextView
                android:textSize="@dimen/dp_15"
                android:textColor="@color/red"
                android:id="@+id/tv_victim_other_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="  "
                app:layout_constraintBottom_toBottomOf="@+id/et_victim_other"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/et_victim_other"/>
            <EditText
                android:enabled="false"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black_dark"
                android:textColorHint="@color/_7b8ffb"
                android:id="@+id/et_victim_other"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:hint="请输入类型名称"
                android:drawablePadding="@dimen/dp_5"
                app:layout_constrainedWidth="true"
                app:layout_constraintLeft_toRightOf="@+id/tv_victim_other_tag"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_victim_type"/>
            <View
                android:id="@+id/et_victim_other_line"
                android:background="@color/div_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_constraintTop_toBottomOf="@+id/et_victim_other"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tv_victim_account_cl"
                android:background="@drawable/bg_white_crop_foot"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/et_victim_other_line">
                <TextView
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/red"
                    android:id="@+id/tv_victim_account_tag"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="*"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_victim_account_lable"/>
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="#666666"
                    android:id="@+id/tv_victim_account_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="受害人账号"
                    app:layout_constraintBottom_toBottomOf="@+id/et_victim_account"
                    app:layout_constraintLeft_toRightOf="@+id/tv_victim_account_tag"
                    app:layout_constraintTop_toTopOf="@+id/et_victim_account"/>
                <EditText
                    android:enabled="false"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black_dark"
                    android:gravity="center"
                    android:id="@+id/et_victim_account"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:hint="请输入受害人账号"
                    android:drawablePadding="@dimen/dp_5"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/tv_victim_account_lable"
                    app:layout_constraintRight_toRightOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:id="@+id/space_v"
                android:background="@color/page_gray"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_victim_account_cl"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_acc_tips"
                android:background="@drawable/bg_white_crop_head"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/space_v">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/group_item_bg"
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_15"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    android:textColor="@color/black_dark"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="嫌疑人账户"/>
            </LinearLayout>
            <View
                android:background="@color/div_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_constraintTop_toBottomOf="@+id/ll_acc_tips"/>
            <TextView
                android:textSize="@dimen/dp_15"
                android:textColor="@color/red"
                android:id="@+id/tv_suspect_type_tag"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="*"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_suspect_type_lable"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="#666666"
                android:id="@+id/tv_suspect_type_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="嫌疑人账户类型"
                app:layout_constraintBottom_toBottomOf="@+id/tv_suspect_type"
                app:layout_constraintLeft_toRightOf="@+id/tv_suspect_type_tag"
                app:layout_constraintTop_toTopOf="@+id/tv_suspect_type"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black_dark"
                android:gravity="center"
                android:id="@+id/tv_suspect_type"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:hint="请选择"
                android:drawablePadding="@dimen/dp_5"
                app:layout_constrainedWidth="true"
                app:layout_constraintLeft_toRightOf="@+id/tv_suspect_type_lable"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_acc_tips"/>
            <View
                android:background="@color/div_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_suspect_type"/>
            <TextView
                android:textSize="@dimen/dp_15"
                android:textColor="@color/red"
                android:id="@+id/tv_suspect_other_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="*"
                app:layout_constraintBottom_toBottomOf="@+id/et_suspect_other"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/et_suspect_other"/>
            <EditText
                android:enabled="false"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black_dark"
                android:textColorHint="@color/_7b8ffb"
                android:gravity="center_vertical"
                android:id="@+id/et_suspect_other"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:minHeight="@dimen/dp_35"
                android:hint="请输入类型名称"
                android:drawablePadding="@dimen/dp_5"
                app:layout_constrainedWidth="true"
                app:layout_constraintLeft_toRightOf="@+id/tv_suspect_other_tag"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_suspect_type"/>
            <View
                android:id="@+id/et_suspect_other_line"
                android:background="@color/div_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_constraintTop_toBottomOf="@+id/et_suspect_other"/>
            <LinearLayout
                android:id="@+id/group_suspect_name"
                android:background="@color/white"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0.5dp"
                app:layout_constraintTop_toBottomOf="@+id/et_suspect_other_line">
                <TextView
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/red"
                    android:id="@+id/tv_suspect_account_name_tag"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="*"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_suspect_account_lable"/>
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="#666666"
                    android:id="@+id/tv_suspect_account_name_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="嫌疑人账户名"
                    app:layout_constraintBottom_toBottomOf="@+id/et_suspect_account"
                    app:layout_constraintLeft_toRightOf="@+id/tv_suspect_account_tag"
                    app:layout_constraintTop_toTopOf="@+id/et_suspect_account"/>
                <EditText
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black_dark"
                    android:gravity="center"
                    android:id="@+id/et_suspect_account_name"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:hint="请输入嫌疑人账户名"
                    android:drawablePadding="@dimen/dp_5"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintLeft_toRightOf="@+id/tv_suspect_account_lable"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_suspect_other"/>
            </LinearLayout>
            <View
                android:id="@+id/et_suspect_name_line"
                android:background="@color/div_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_constraintTop_toBottomOf="@+id/group_suspect_name"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tv_account_cl"
                android:background="@drawable/bg_white_crop_foot"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/et_suspect_name_line">
                <TextView
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/red"
                    android:id="@+id/tv_suspect_account_tag"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="*"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_suspect_account_lable"/>
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="#666666"
                    android:id="@+id/tv_suspect_account_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="嫌疑人账号"
                    app:layout_constraintBottom_toBottomOf="@+id/et_suspect_account"
                    app:layout_constraintLeft_toRightOf="@+id/tv_suspect_account_tag"
                    app:layout_constraintTop_toTopOf="@+id/et_suspect_account"/>
                <EditText
                    android:enabled="false"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black_dark"
                    android:gravity="center"
                    android:id="@+id/et_suspect_account"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:hint="请输入嫌疑人账号"
                    android:drawablePadding="@dimen/dp_5"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/tv_suspect_account_lable"
                    app:layout_constraintRight_toRightOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:id="@+id/space_vp"
                android:background="@color/page_gray"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_account_cl"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_pictures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/space_vp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/tv_picture_lable"
                    android:background="@drawable/bg_white_crop"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/group_item_bg"
                        android:layout_width="@dimen/dp_3"
                        android:layout_height="@dimen/dp_15"
                        android:scaleType="fitCenter"/>
                    <TextView
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold"
                        android:textColor="@color/black_dark"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="转账汇款凭证"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:paddingBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toBottomOf="@+id/tv_picture_lable"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_victim"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="tv_victim_other_tag,et_victim_other"/>
            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_suspect"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="tv_suspect_other_tag,et_suspect_other,et_suspect_other_line"/>
            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_amount"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="tv_amount_lable,tv_amount,line_amount"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
