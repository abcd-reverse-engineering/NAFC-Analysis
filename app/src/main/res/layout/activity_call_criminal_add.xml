<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/page_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/rl_title_with_back"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/ns_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rl_title">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginStart="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/et_victim_phone_label"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/et_victim_phone_label"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/_333333"
                android:gravity="center_vertical"
                android:id="@+id/et_victim_phone_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="受害人电话"
                android:layout_marginStart="@dimen/dp_23"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <EditText
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black_dark"
                android:textColorHint="@color/colorGray"
                android:gravity="center_vertical"
                android:id="@+id/et_victim_phone"
                android:background="@drawable/bg_white_crop"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="15dp"
                android:hint="请输入或粘贴受害人电话号码"
                android:lines="1"
                android:singleLine="true"
                android:maxLength="25"
                android:digits="1234567890+"
                android:imeOptions="actionNext"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_victim_phone_label"/>
            <TextView
                android:textColor="@color/colorRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginStart="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_phone_label"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_phone_label"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black_dark"
                android:gravity="center_vertical"
                android:id="@+id/tv_phone_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="诈骗电话"
                android:layout_marginStart="@dimen/dp_23"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_victim_phone"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_phone_label">
                <EditText
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black_dark"
                    android:textColorHint="@color/colorGray"
                    android:gravity="center_vertical"
                    android:id="@+id/et_phone"
                    android:background="@drawable/bg_white_crop"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:hint="请输入或粘贴诈骗电话号码"
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLength="25"
                    android:digits="1234567890+"
                    android:imeOptions="actionNext"/>
                <LinearLayout
                    android:id="@+id/ll_clause"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/et_victim_phone">
                    <CheckBox
                        android:id="@+id/cb_select"
                        android:paddingLeft="10dp"
                        android:paddingRight="3dp"
                        android:paddingBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:checked="false"
                        android:button="@null"
                        android:drawableLeft="@drawable/ba_box_select"/>
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="#999999"
                        android:gravity="left"
                        android:id="@+id/clause"
                        android:paddingRight="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="若嫌疑人电话为FaceTime视频通话请勾选（仅苹果手机可接收此类视频通话）"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:textColor="@color/colorRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginStart="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_occur_time_label"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_occur_time_label"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black_dark"
                android:gravity="center_vertical"
                android:id="@+id/tv_occur_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="通话时间"
                android:layout_marginStart="@dimen/dp_23"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_phone"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black_dark"
                android:textColorHint="@color/colorGray"
                android:gravity="center_vertical"
                android:id="@+id/tv_occur_time"
                android:background="@drawable/bg_white_crop"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:hint="请选择通话开始时间"
                android:lines="1"
                android:singleLine="true"
                android:drawableRight="@mipmap/arrow_gray_right"
                android:imeOptions="actionNext"
                app:layout_constraintTop_toBottomOf="@+id/tv_occur_time_label"/>
            <TextView
                android:textColor="@color/colorRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginStart="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_duration_label"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_duration_label"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black_dark"
                android:gravity="center_vertical"
                android:id="@+id/tv_duration_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="通话时长"
                android:layout_marginStart="@dimen/dp_23"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_occur_time"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black_dark"
                android:textColorHint="@color/colorGray"
                android:gravity="center_vertical"
                android:id="@+id/tv_duration"
                android:background="@drawable/bg_white_crop"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:hint="请选择通话时长"
                android:lines="1"
                android:singleLine="true"
                android:drawableRight="@mipmap/arrow_gray_right"
                android:imeOptions="actionNext"
                app:layout_constraintTop_toBottomOf="@+id/tv_duration_label"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black_dark"
                android:gravity="center_vertical"
                android:id="@+id/tv_record_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="通话录音"
                android:layout_marginStart="@dimen/dp_15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_duration"/>
            <FrameLayout
                android:id="@+id/fl_record_label"
                android:background="@drawable/bg_white_crop"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_record_label">
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="#666666"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="聊天语音上传"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="#cccccc"
                    android:gravity="center"
                    android:id="@+id/tv_audio_num"
                    android:background="@drawable/bg_white_crop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="请选择"
                    android:lines="1"
                    android:drawablePadding="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_100"/>
            </FrameLayout>
            <Button
                android:enabled="true"
                android:textSize="@dimen/sp_18"
                android:textColor="@drawable/button_textcolor"
                android:gravity="center"
                android:id="@+id/btn_confirm"
                android:background="@drawable/button_bg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="30dp"
                android:text="添加"
                app:layout_constraintTop_toBottomOf="@+id/fl_record_label"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
