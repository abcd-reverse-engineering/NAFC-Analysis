<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/page_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/rl_title_with_back"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">
        <TextView
            android:textColor="@color/colorRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_victim_phone_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_victim_phone_label"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="@color/colorGray"
            android:gravity="center"
            android:id="@+id/tv_victim_phone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:minHeight="50dp"
            android:text="受害人电话："
            android:layout_marginStart="@dimen/dp_15"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <EditText
            android:textSize="@dimen/sp_15"
            android:textColor="@color/_030303"
            android:gravity="center"
            android:id="@+id/et_victim_phone"
            android:background="@color/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:hint="请输入受害人电话号码"
            android:inputType="number"
            android:paddingStart="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_15"
            app:layout_constrainedWidth="true"
            app:layout_constraintLeft_toRightOf="@+id/tv_victim_phone_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_victim_phone_label"/>
        <View
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintTop_toBottomOf="@+id/et_victim_phone"/>
        <TextView
            android:textColor="@color/colorRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_phone_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_phone_label"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="@color/colorGray"
            android:gravity="center"
            android:id="@+id/tv_phone_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:text="诈骗电话："
            android:layout_marginStart="@dimen/dp_15"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_victim_phone"/>
        <EditText
            android:textSize="@dimen/sp_15"
            android:textColor="@color/_030303"
            android:gravity="center"
            android:id="@+id/et_phone"
            android:background="@color/transparent"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:hint="请输入诈骗电话号码"
            android:inputType="number"
            android:paddingStart="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_15"
            app:layout_constrainedWidth="true"
            app:layout_constraintLeft_toRightOf="@+id/tv_phone_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_phone_label"/>
        <View
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintTop_toBottomOf="@+id/et_phone"/>
        <TextView
            android:textColor="@color/colorRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_occur_time_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_occur_time_label"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="@color/colorGray"
            android:gravity="center"
            android:id="@+id/tv_occur_time_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_15"
            android:text="通话时间："
            android:layout_marginStart="@dimen/dp_15"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_phone_label"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="@color/_030303"
            android:gravity="center"
            android:id="@+id/tv_occur_time"
            android:background="@color/transparent"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:hint="请选择通话开始时间"
            android:drawableRight="@mipmap/arrow_gray_right"
            android:drawablePadding="@dimen/dp_5"
            android:paddingStart="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_15"
            app:layout_constrainedWidth="true"
            app:layout_constraintLeft_toRightOf="@+id/tv_occur_time_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_occur_time_label"/>
        <View
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_occur_time"/>
        <TextView
            android:textColor="@color/colorRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_duration_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_duration_label"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="@color/colorGray"
            android:gravity="center"
            android:id="@+id/tv_duration_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="通话时长："
            android:layout_marginStart="@dimen/dp_15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_occur_time_label"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="@color/_030303"
            android:gravity="center"
            android:id="@+id/tv_duration"
            android:background="@color/transparent"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:hint="请选择通话时长"
            android:drawableRight="@mipmap/arrow_gray_right"
            android:drawablePadding="@dimen/dp_5"
            android:paddingStart="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_15"
            app:layout_constrainedWidth="true"
            app:layout_constraintLeft_toRightOf="@+id/tv_duration_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_duration_label"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/btn_confirm"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="保存"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/buttonCrop"/>
</LinearLayout>
