<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/page_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/rl_title_with_back"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_above="@+id/ll_deal"
        android:layout_below="@+id/rl_title">
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_name"
                    android:background="@drawable/bg_white_crop_head"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toTopOf="parent">
                    <View
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/group_item_bg"
                        android:layout_width="@dimen/dp_3"
                        android:layout_height="@dimen/dp_15"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_case_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:singleLine="true"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_time"
                    android:background="@drawable/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/ll_name">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="报案时间："
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:ellipsize="end"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/case_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:singleLine="true"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_case_num"
                    android:background="@drawable/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/ll_time">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="采集编号："
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:ellipsize="end"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/case_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:singleLine="true"/>
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/bg_white_crop_foot"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/ll_case_num">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="诈骗类型："
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/polic_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_status_tag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_detail_over"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.3"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:background="@drawable/bg_white_crop_head"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp">
                <View
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/group_item_bg"
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_15"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="涉案信息"
                    android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/white"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="#666666"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_shizhu_info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="事主信息"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_shizhu_detial"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/iv_victim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/arrow_gray_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/white"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="#666666"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_case_account"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="涉案账户"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_case_account_detial"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/iv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/arrow_gray_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_criminal_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="#666666"
                    android:gravity="center_vertical"
                    android:background="@drawable/white"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="嫌疑人电话："
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:id="@+id/ll_call"
                    android:background="@drawable/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_criminal_call"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:text="通话类"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_criminal_call_detial"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/iv_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/arrow_gray_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_recharge"
                    android:background="@drawable/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_criminal_recharge"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:text="充值类"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_criminal_recharge_detial"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/iv_recharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/arrow_gray_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_relation"
                    android:background="@drawable/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_criminal_relation"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:text="关联类"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_criminal_relation_detial"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/iv_relation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/arrow_gray_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_delivery"
                    android:background="@drawable/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_criminal_delivery"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:text="寄递类"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_criminal_delivery_detial"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/iv_delivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/arrow_gray_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_sms"
                android:background="@drawable/bg_white_crop_foot"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="#666666"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_criminal_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="涉诈短信"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_criminal_sms_detial"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/iv_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/arrow_gray_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_criminal_net"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="#666666"
                    android:gravity="center_vertical"
                    android:background="@drawable/white"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:text="嫌疑人互联网信息："
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:id="@+id/ll_net"
                    android:background="@drawable/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_criminal_net"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:text="互联网账号"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_criminal_net_detial"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/iv_net"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/arrow_gray_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_app"
                    android:background="@drawable/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_app_info"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:text="诈骗APP"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_app_info_detial"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/iv_app"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/arrow_gray_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_websit"
                    android:background="@drawable/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_websit_info"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:text="涉诈网址"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_websit_info_detial"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/iv_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/arrow_gray_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_stop_payment"
                android:background="@drawable/bg_white_crop_head"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp">
                <View
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/group_item_bg"
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_15"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/black_dark"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="止付信息"
                    android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_stop_payment_content"
                android:background="@drawable/bg_white_crop_foot"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="#666666"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="嫌疑人止付账户"
                    android:layout_marginStart="15dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/black_dark"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_stop_payment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="*个"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/iv_stop_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_gray_right"
                    android:layout_marginEnd="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_reply"
                android:background="@drawable/bg_white_crop_head"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp">
                <View
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/group_item_bg"
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_15"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/black_dark"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="报案反馈"
                    android:singleLine="true"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_reply"
                android:background="@drawable/bg_white_crop_foot"
                android:paddingBottom="@dimen/dp_15"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:nestedScrollingEnabled="false"/>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bg_white_crop"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <View
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/group_item_bg"
                        android:layout_width="@dimen/dp_3"
                        android:layout_height="@dimen/dp_15"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text="本人签名"
                        android:singleLine="true"/>
                </LinearLayout>
                <FrameLayout
                    android:id="@+id/fl_repter_add"
                    android:background="@drawable/bg_gray_crop2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/iv_repter_sign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:scaleType="fitXY"/>
                </FrameLayout>
            </LinearLayout>
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                layout="@layout/layout_company"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_gravity="bottom"
        android:id="@+id/ll_deal"
        android:background="@drawable/white"
        android:paddingTop="@dimen/dp_10"
