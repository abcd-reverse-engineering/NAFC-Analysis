<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/page_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/rl_title_with_back"/>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:orientation="horizontal"
                android:id="@+id/rl_account_type"
                android:background="@drawable/bg_white_crop_head"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50_h"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="15dp">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/colorRed"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="*"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="#333333"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="账户类型"
                    android:layout_weight="1"
                    android:layout_toRightOf="@+id/iv_yjfk"/>
                <RadioGroup
                    android:orientation="horizontal"
                    android:id="@+id/rg_chat"
                    android:paddingRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">
                    <RadioButton
                        android:id="@+id/rb_wx"
                        android:background="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:button="@drawable/rb__select_style"
                        android:text=" 微信"/>
                    <RadioButton
                        android:id="@+id/rb_qq"
                        android:background="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:button="@drawable/rb__select_style"
                        android:text=" QQ"/>
                </RadioGroup>
                <View
                    android:background="@color/divide_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:id="@+id/rl_other_acc"
                android:background="#ffffff"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50_h"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="#333333"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="其他账户类型"
                    android:layout_weight="1"
                    android:layout_toRightOf="@+id/iv_yjfk"/>
                <EditText
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:gravity="center"
                    android:id="@+id/et_tag_other"
                    android:background="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="25dp"
                    android:hint="请输入其他类型账户"
                    android:maxLength="15"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <View
                    android:background="@color/divide_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:background="@drawable/bg_white_crop_foot"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50_h"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="账户名称"
                    android:layout_weight="1"
                    android:layout_toRightOf="@+id/iv_gywe"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:id="@+id/trad_fraud_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:id="@+id/ll_dupery_type"
                android:background="@drawable/bg_white_crop_head"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50_h"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="15dp">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/colorRed"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="*"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="#333333"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="诈骗类型"
                    android:layout_weight="1"
                    android:layout_toRightOf="@+id/iv_yjfk"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:id="@+id/tv_dupery_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:hint="请选择"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/arrow_gray_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <View
                    android:background="@color/divide_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:id="@+id/ll_report_area"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50_h"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="#333333"
                    android:gravity="center_vertical"
                    android:id="@+id/region_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="举报地"
                    android:layout_weight="1"
                    android:layout_toRightOf="@+id/iv_yjfk"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:id="@+id/region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:hint="请选择"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/arrow_gray_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <View
                    android:background="@color/divide_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bg_white_crop_foot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="#333333"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50_h"
                    android:layout_marginLeft="15dp"
                    android:text="举报描述"
                    android:layout_toRightOf="@+id/iv_yjfk"/>
                <EditText
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:gravity="top"
                    android:id="@+id/et_case_describe"
                    android:background="@drawable/trad_fraud_desc"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:hint="可在这里详细描述举报对象的非法行为"/>
            </LinearLayout>
            <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_commit"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:text="提交举报"
                style="@style/buttonCrop"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
