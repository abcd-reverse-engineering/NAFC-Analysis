<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/page_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/rl_title_with_back"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/ns_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp">
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="#666666"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:id="@+id/tv_call_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="请选择"
                    android:lines="1"
                    android:drawableRight="@mipmap/arrow_gray_right"
                    android:drawablePadding="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_100"/>
            </FrameLayout>
            <FrameLayout
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="#666666"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="社交账号"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:id="@+id/tv_society_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="请选择"
                    android:lines="1"
                    android:drawableRight="@mipmap/arrow_gray_right"
                    android:drawablePadding="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_100"/>
            </FrameLayout>
            <TextView
                android:textSize="14sp"
                android:textColor="#ff0000"
                android:gravity="center_vertical"
                android:background="@drawable/white"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="15dp"
                android:text="提示: 以上至少填写一项"/>
            <FrameLayout
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="#666666"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="聊天语音上传"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:id="@+id/tv_audio_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="请选择"
                    android:lines="1"
                    android:drawableRight="@mipmap/arrow_gray_right"
                    android:drawablePadding="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_100"/>
            </FrameLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bg_white_crop_foot_8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="联系方式/内容截图："
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_line"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:background="@color/colorWhite"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toBottomOf="@+id/tv_record_label"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_marginLeft="18dp"
                    android:text="最多可选择200张图片"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_line"/>
            </LinearLayout>
            <Button
                android:textSize="16sp"
                android:textColor="@color/white"
                android:id="@+id/btn_commit"
                android:background="@drawable/button_bg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:text="保存"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>
