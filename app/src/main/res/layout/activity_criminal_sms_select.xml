<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/page_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/rl_title_with_back"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_accpt_phone_label"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_accpt_phone_label"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black_dark"
                android:gravity="center_vertical"
                android:id="@+id/tv_accpt_phone_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:minHeight="50dp"
                android:text="接收短信号码"
                android:layout_marginStart="@dimen/dp_15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <EditText
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black_dark"
                android:gravity="center_vertical"
                android:id="@+id/tv_victim_phone"
                android:background="@drawable/bg_white_crop"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="15dp"
                android:hint="请输入或粘贴接收短信号码"
                android:lines="1"
                android:singleLine="true"
                android:maxLength="25"
                android:digits="1234567890+"
                android:imeOptions="actionNext"
                app:layout_constraintTop_toBottomOf="@+id/tv_accpt_phone_label"/>
            <TextView
                android:textColor="@color/colorRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_phone_label"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_phone_label"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black_dark"
                android:gravity="center_vertical"
                android:id="@+id/tv_phone_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:minHeight="50dp"
                android:text="涉诈短信号码"
                android:layout_marginStart="@dimen/dp_15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_victim_phone"/>
            <EditText
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black_dark"
                android:gravity="center_vertical"
                android:id="@+id/et_phone"
                android:background="@drawable/bg_white_crop"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_margin="15dp"
                android:hint="请输入或粘贴涉诈短信号码"
                android:lines="1"
                android:singleLine="true"
                android:maxLength="25"
                android:digits="1234567890+"
                android:imeOptions="actionNext"
                app:layout_constraintTop_toBottomOf="@+id/tv_phone_label"/>
            <TextView
                android:textColor="@color/colorRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_time_label"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_time_label"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black_dark"
                android:gravity="center_vertical"
                android:id="@+id/tv_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:minHeight="50dp"
                android:text="涉诈短信接收时间"
                android:layout_marginStart="@dimen/dp_15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_phone"/>
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black_dark"
                android:gravity="center_vertical"
                android:id="@+id/tv_time"
                android:background="@drawable/bg_white_crop"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_margin="15dp"
                android:hint="请选择涉诈短信接收时间"
                android:lines="1"
                android:singleLine="true"
                android:drawableRight="@mipmap/arrow_gray_right"
                android:imeOptions="actionNext"
                app:layout_constraintTop_toBottomOf="@+id/tv_time_label"/>
            <TextView
                android:textColor="@color/colorRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_describe_label"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_describe_label"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black_dark"
                android:gravity="center_vertical"
                android:id="@+id/tv_describe_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:minHeight="50dp"
                android:text="涉诈短信内容"
                android:layout_marginStart="@dimen/dp_15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_time"/>
            <TextView
                android:enabled="false"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black_dark"
                android:gravity="top"
                android:id="@+id/tv_describe"
                android:background="@drawable/bg_white_crop"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_25"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:minHeight="@dimen/dp_170"
                android:hint="请输入或粘贴涉诈短信内容"
                android:maxLength="800"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_describe_label"/>
            <TextView
                android:textColor="@color/colorRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_type_label"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_type_label"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black_dark"
                android:gravity="center_vertical"
                android:id="@+id/tv_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:minHeight="50dp"
                android:text="是否为彩信"
                android:layout_marginStart="@dimen/dp_15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_describe"/>
            <RadioButton
                android:id="@+id/rb_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是"
                app:layout_constraintLeft_toLeftOf="@+id/tv_type_label"
                app:layout_constraintTop_toBottomOf="@+id/tv_type_label"/>
            <RadioButton
                android:id="@+id/rb_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="否"
                app:layout_constraintLeft_toRightOf="@+id/rb_yes"
                app:layout_constraintTop_toBottomOf="@+id/rb_yes"
                app:layout_constraintTop_toTopOf="@+id/rb_yes"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_picture"
                android:background="@drawable/bg_white_crop"
                android:padding="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rb_yes">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black_dark"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:text="上传短信截图："/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/colorGray"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:minHeight="50dp"
                    android:text="最多可添加6张图片"/>
            </LinearLayout>
            <TextView
                android:enabled="true"
                android:textSize="@dimen/sp_18"
                android:textColor="@drawable/button_textcolor"
                android:gravity="center"
                android:id="@+id/confirm"
                android:background="@drawable/button_bg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="30dp"
                android:text="添加"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_picture"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
