<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/page_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/rl_title_with_back"/>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="15sp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="@dimen/dp_20"
                android:text="选择关联平台"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/flow_layout"
                    android:background="@drawable/bg_white_crop"
                    android:paddingLeft="15dp"
                    android:paddingBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="15dp"
                    app:max_select="1"/>
                <View
                    android:id="@+id/v_flow_uncheck"
                    android:focusable="true"
                    android:visibility="gone"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/flow_layout"
                    android:layout_alignBottom="@+id/flow_layout"
                    android:layout_alignStart="@+id/flow_layout"
                    android:layout_alignEnd="@+id/flow_layout"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/ll_acc_nomar"
                android:background="@drawable/bg_white_crop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:paddingStart="10dp"
                android:paddingEnd="15dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:id="@+id/tv_account_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账号"
                    android:layout_centerVertical="true"/>
                <EditText
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black_dark"
                    android:gravity="center"
                    android:id="@+id/et_account"
                    android:background="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:hint="请输入账号"
                    android:maxLength="25"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_toEndOf="@+id/tv_account_label"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_acc_other"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="其他类型"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_white_crop_head"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:id="@+id/tv_tag_other_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="其他社交类型"/>
                    <EditText
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/black_dark"
                        android:gravity="center"
                        android:id="@+id/et_tag_other"
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:hint="请输入其他社交类型名称"
                        android:maxLength="12"
                        android:layout_weight="1"/>
                </LinearLayout>
                <RelativeLayout
                    android:background="@drawable/bg_white_crop_foot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="15dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:id="@+id/tv_account_other_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="其他类型账号"
                        android:layout_centerVertical="true"/>
                    <EditText
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/black_dark"
                        android:gravity="center"
                        android:id="@+id/et_account_other"
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:minHeight="50dp"
                        android:hint="请输入账号"
                        android:maxLength="25"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_toEndOf="@+id/tv_account_other_label"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="请输入账号ID，不是账号昵称"
                android:layout_marginStart="22dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_picture"
                android:background="@drawable/bg_white_crop"
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_describe">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black_dark"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:text="联系方式/内容截图："/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/colorGray"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:minHeight="50dp"
                    android:text="最多可添加6张图片"/>
            </LinearLayout>
            <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_commit"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="确认添加"
                style="@style/buttonCrop"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
