<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingBottom="@dimen/dp_20"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/rl_title_with_back"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ct_phone_code"
        android:background="@drawable/dialog_corner_bg"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textSize="24sp"
            android:textColor="@color/black_dark"
            android:id="@+id/phone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请设置新密码"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/black_dark"
            android:id="@+id/phone_Tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/login_pwd"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone_label"/>
        <EditText
            android:textSize="@dimen/sp_15"
            android:gravity="center_vertical"
            android:id="@+id/et_new_pwd"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="60dp"
            android:hint="请输入密码"
            android:lines="1"
            android:singleLine="true"
            android:maxLength="16"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone_Tips"/>
        <View
            android:background="@color/divide_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/pwd_eye"
            android:paddingRight="@dimen/dp_15"
            android:layout_width="@dimen/dp_35"
            android:layout_height="0dp"
            android:src="@mipmap/eye_nor"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/et_new_pwd"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_new_pwd"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:enabled="false"
        android:textSize="@dimen/sp_16"
        android:textColor="@drawable/button_textcolor"
        android:gravity="center"
        android:id="@+id/confirm"
        android:background="@drawable/button_bg"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:text="完成"
        app:layout_constraintTop_toBottomOf="@+id/ct_phone_code"
        style="@style/buttonCrop"/>
</androidx.constraintlayout.widget.ConstraintLayout>
