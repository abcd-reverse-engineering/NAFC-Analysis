<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/page_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/rl_title_with_back"/>
    <TextView
        android:textSize="20sp"
        android:textColor="#3e3e3e"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="注销账号前,请先进行安全验证"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_55"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20">
        <EditText
            android:textSize="@dimen/sp_14"
            android:gravity="center_vertical"
            android:id="@+id/et_phone_num"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_45"
            android:hint="请填写当前账号手机号码"
            android:lines="1"
            android:singleLine="true"
            android:maxLength="11"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:paddingStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_15"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/iv_clear"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/iv_clear"
            android:padding="@dimen/dp_10"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_45"
            android:src="@mipmap/ic_clear_gray"
            app:layout_constraintBottom_toBottomOf="@+id/et_phone_num"
            app:layout_constraintLeft_toRightOf="@+id/et_phone_num"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_phone_num"/>
        <View
            android:background="@color/divide_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/et_phone_num"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp">
        <EditText
            android:textSize="@dimen/sp_14"
            android:textColor="#999999"
            android:id="@+id/phone_code"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_100"
            android:hint="请输入验证码"
            android:lines="1"
            android:singleLine="true"
            android:maxLength="6"
            android:inputType="number"
            android:paddingStart="@dimen/dp_5"/>
        <ui.view.CodeCutTimeTextView
            android:textColor="#2b4cff"
            android:layout_gravity="center"
            android:id="@+id/tv_resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重新发送"/>
    </FrameLayout>
    <View
        android:background="@color/divide_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <Button
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:id="@+id/confirm"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:text="下一步"
        style="@style/buttonCrop"/>
</LinearLayout>
