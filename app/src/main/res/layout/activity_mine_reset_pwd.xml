<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/page_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/rl_title_with_back"/>
    <ScrollView
        android:paddingBottom="90dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rl_title">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ct_old_pwd"
                android:background="@drawable/dialog_corner_bg"
                android:paddingTop="15dp"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black_dark"
                    android:id="@+id/phone_old"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="旧密码："
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <EditText
                    android:textSize="@dimen/sp_15"
                    android:textColor="#999999"
                    android:id="@+id/old_pwd"
                    android:background="@drawable/bg_code_edit"
                    android:paddingLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/dp_20"
                    android:hint="请输入旧密码"
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLength="16"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/phone_old"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ct_confirm_pwd"
                android:background="@drawable/dialog_corner_bg"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@+id/ct_old_pwd">
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black_dark"
                    android:id="@+id/phone_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="新密码："
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <EditText
                    android:textSize="@dimen/sp_15"
                    android:gravity="center_vertical"
                    android:id="@+id/user_pwd"
                    android:background="@drawable/bg_code_edit"
                    android:paddingLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/dp_20"
                    android:hint="@string/login_pwd"
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLength="16"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/phone_label"/>
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black_dark"
                    android:id="@+id/tv_conf_pdw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="25dp"
                    android:text="确认密码："
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/user_pwd"/>
                <EditText
                    android:textSize="@dimen/sp_15"
                    android:gravity="center_vertical"
                    android:id="@+id/user_confirm_pwd"
                    android:background="@drawable/bg_code_edit"
                    android:paddingLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/dp_20"
                    android:hint="再次输入新密码"
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLength="16"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_conf_pdw"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:enabled="false"
                android:textSize="@dimen/sp_14"
                android:textColor="@drawable/button_textcolor"
                android:gravity="center"
                android:id="@+id/confirm"
                android:background="@drawable/button_bg"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="20dp"
                android:text="确认修改"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ct_confirm_pwd"
                style="@style/buttonCrop"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#666666"
                android:id="@+id/forget_pwd"
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/confirm"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
