<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/page_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/rl_title_with_back"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_below="@+id/rl_title">
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/bg_white_crop_head"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:background="@drawable/group_item_bg"
                android:layout_width="@dimen/dp_3"
                android:layout_height="@dimen/dp_15"
                android:scaleType="fitCenter"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                android:textColor="@color/black_dark"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="嫌疑人账户"/>
        </LinearLayout>
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0.5dp">
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="#666666"
                android:id="@+id/tv_suspect_type_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:text="嫌疑人账户类型"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black_dark"
                android:textColorHint="#cccccc"
                android:gravity="center"
                android:id="@+id/tv_suspect_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:hint="请选择"
                android:drawableRight="@mipmap/arrow_gray_right"
                android:drawablePadding="@dimen/dp_5"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/group_suspect"
            android:background="@color/white"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0.5dp">
            <TextView
                android:textSize="@dimen/dp_15"
                android:textColor="@color/red"
                android:id="@+id/tv_suspect_other_tag"
                android:layout_width="6dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:text="*"/>
            <EditText
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black_dark"
                android:textColorHint="@color/_7b8ffb"
                android:id="@+id/et_suspect_other"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_marginRight="@dimen/dp_10"
                android:hint="请输入类型名称"
                android:drawablePadding="@dimen/dp_5"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/group_suspect_name"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0.5dp">
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="#666666"
                android:id="@+id/tv_suspect_account_name_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:text="嫌疑人账户名"/>
            <EditText
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black_dark"
                android:textColorHint="#cccccc"
                android:gravity="center"
                android:id="@+id/et_suspect_account_name"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:hint="请输入嫌疑人账户名"
                android:maxLength="100"
                android:drawablePadding="@dimen/dp_5"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/bg_white_crop_foot"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0.5dp">
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="#666666"
                android:id="@+id/tv_suspect_account_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:text="嫌疑人账号"/>
            <EditText
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black_dark"
                android:textColorHint="#cccccc"
                android:gravity="center"
                android:id="@+id/et_suspect_account"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:hint="请输入嫌疑人账号"
                android:maxLength="50"
                android:drawablePadding="@dimen/dp_5"/>
        </LinearLayout>
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0.5dp">
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="#666666"
                android:id="@+id/tv_time_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:text="转账时间"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black_dark"
                android:textColorHint="#cccccc"
                android:gravity="center"
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:hint="请选择"
                android:drawableRight="@mipmap/arrow_gray_right"
                android:drawablePadding="@dimen/dp_5"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/bg_white_crop_foot"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0.5dp">
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="#666666"
                android:id="@+id/tv_transfer_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:text="转账金额"/>
            <EditText
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black_dark"
                android:textColorHint="#cccccc"
                android:gravity="center"
                android:id="@+id/et_transfer_money"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:hint="请输入转账金额"
                android:maxLength="16"
                android:drawablePadding="@dimen/dp_5"
                android:inputType="numberDecimal"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_commit"
        android:layout_marginBottom="@dimen/dp_15"
        android:text="确认"
        android:layout_alignParentBottom="true"
        style="@style/button"/>
</RelativeLayout>
