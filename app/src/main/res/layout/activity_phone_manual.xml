<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingBottom="@dimen/dp_20"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/rl_title_with_back"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="30dp"
        android:layout_marginRight="@dimen/dp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_title">
        <TextView
            android:textSize="24sp"
            android:textColor="@color/black_dark"
            android:id="@+id/phone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入当前账号手机号码"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/black_dark"
            android:id="@+id/phone_Tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone_label"/>
        <EditText
            android:textSize="@dimen/sp_15"
            android:gravity="center_vertical"
            android:id="@+id/phone_code"
            android:background="@null"
            android:paddingLeft="@dimen/dp_15"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="40dp"
            android:layout_marginRight="@dimen/dp_15"
            android:hint="请输入当前账号手机号码"
            android:lines="1"
            android:singleLine="true"
            android:maxLength="11"
            android:inputType="number"
            android:imeOptions="actionNext"
            app:layout_constraintLeft_toRightOf="@+id/phone_tips"
            app:layout_constraintRight_toLeftOf="@+id/iv_clear"
            app:layout_constraintTop_toBottomOf="@+id/phone_Tips"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="#999999"
            android:gravity="center_vertical"
            android:id="@+id/phone_tips"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_45"
            android:text="+86"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/phone_code"/>
        <ImageView
            android:id="@+id/iv_clear"
            android:padding="@dimen/dp_10"
            android:visibility="invisible"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/ic_clear_gray"
            app:layout_constraintBottom_toBottomOf="@+id/account"
            app:layout_constraintLeft_toRightOf="@+id/account"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/phone_code"/>
        <View
            android:background="@color/divide_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:enabled="false"
        android:textSize="@dimen/sp_16"
        android:textColor="@drawable/button_textcolor"
        android:gravity="center"
        android:id="@+id/confirm"
        android:background="@drawable/button_bg"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="125dp"
        android:layout_marginRight="20dp"
        android:text="下一步"
        app:layout_constraintTop_toBottomOf="@+id/layout"
        style="@style/buttonCrop"/>
</androidx.constraintlayout.widget.ConstraintLayout>
