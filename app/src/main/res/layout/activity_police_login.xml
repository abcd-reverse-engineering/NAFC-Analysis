<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/page_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_police_login"
        android:adjustViewBounds="true"/>
    <include layout="@layout/rl_title_with_white"/>
    <TextView
        android:textSize="24sp"
        android:textColor="@color/white"
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_60"
        android:text="警员登录"
        android:layout_alignBottom="@+id/iv_top"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_layout"
        android:background="@drawable/bg_white_crop"
        android:paddingBottom="@dimen/dp_60"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="-40dp"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_below="@+id/iv_top">
        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/qb_px_25"
            android:src="@mipmap/ic_police_phone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <EditText
            android:textSize="@dimen/sp_14"
            android:textColorHint="#8c99b1"
            android:id="@+id/phone"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:hint="请输入办案民警手机号"
            android:maxLines="1"
            android:singleLine="true"
            android:maxLength="11"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@+id/iv_phone"
            app:layout_constraintLeft_toRightOf="@+id/iv_phone"
            app:layout_constraintRight_toLeftOf="@+id/tv_resend"
            app:layout_constraintTop_toTopOf="@+id/iv_phone"/>
        <ImageView
            android:id="@+id/iv_clear"
            android:padding="@dimen/dp_10"
            android:visibility="gone"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_45"
            android:src="@mipmap/ic_clear_gray"
            app:layout_constraintBottom_toBottomOf="@+id/phone"
            app:layout_constraintRight_toLeftOf="@+id/tv_resend"
            app:layout_constraintTop_toTopOf="@+id/phone"/>
        <ui.view.CodeCutTimeTextView
            android:textSize="@dimen/sp_14"
            android:id="@+id/tv_resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            app:layout_constraintBottom_toBottomOf="@+id/phone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/phone"/>
        <View
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            app:layout_constraintTop_toBottomOf="@+id/phone"/>
        <ImageView
            android:id="@+id/iv_code"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/qb_px_50"
            android:src="@mipmap/ic_police_code"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_phone"/>
        <EditText
            android:textSize="@dimen/sp_14"
            android:textColorHint="#8c99b1"
            android:id="@+id/code"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:hint="请输入验证码"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@+id/iv_code"
            app:layout_constraintLeft_toRightOf="@+id/iv_code"
            app:layout_constraintRight_toLeftOf="@+id/iv_clear_code"
            app:layout_constraintTop_toTopOf="@+id/iv_code"/>
        <ImageView
            android:id="@+id/iv_clear_code"
            android:padding="@dimen/dp_10"
            android:visibility="gone"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/ic_clear_gray"
            app:layout_constraintBottom_toBottomOf="@+id/iv_code"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_code"/>
        <View
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            app:layout_constraintTop_toBottomOf="@+id/code"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:enabled="true"
        android:textSize="@dimen/sp_16"
        android:textColor="@drawable/button_textcolor"
        android:gravity="center"
        android:id="@+id/confirm"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="@dimen/dp_30"
        android:text="登录"
        android:layout_below="@+id/cl_layout"
        style="@style/button"/>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_alignParentBottom="true"
        layout="@layout/layout_company"/>
</RelativeLayout>
