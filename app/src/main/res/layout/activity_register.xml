<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:paddingBottom="@dimen/dp_20"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="16sp"
        android:textColor="@color/black_dark"
        android:id="@+id/tv_region"
        android:padding="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:layout_width="5dp"
        android:layout_height="4dp"
        android:src="@mipmap/ic_node_region"
        app:layout_constraintBottom_toBottomOf="@+id/tv_region"
        app:layout_constraintLeft_toRightOf="@+id/tv_region"
        app:layout_constraintTop_toTopOf="@+id/tv_region"/>
    <TextView
        android:textSize="24sp"
        android:textColor="@color/black_dark"
        android:id="@+id/login_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:text="注册账号"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_region"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_layout"
        android:background="@color/transparent_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_35"
        app:layout_constraintTop_toBottomOf="@+id/login_label">
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="#999999"
            android:gravity="center_vertical"
            android:id="@+id/account_label"
            android:paddingLeft="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_45"
            android:text="+86"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <EditText
            android:textSize="@dimen/sp_15"
            android:textColor="@color/black_dark"
            android:gravity="center_vertical"
            android:id="@+id/account"
            android:background="@color/transparent"
            android:paddingLeft="@dimen/dp_15"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_15"
            android:hint="请输入手机号"
            android:maxLength="11"
            android:inputType="number"
            app:layout_constraintLeft_toRightOf="@+id/account_label"
            app:layout_constraintRight_toLeftOf="@+id/tv_resend"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/iv_clear_account"
            android:padding="@dimen/dp_10"
            android:visibility="invisible"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/ic_clear_gray"
            app:layout_constraintBottom_toBottomOf="@+id/account_phone"
            app:layout_constraintLeft_toRightOf="@+id/account_phone"
            app:layout_constraintRight_toLeftOf="@+id/tv_resend"
            app:layout_constraintTop_toTopOf="@+id/account_phone"/>
        <ui.view.CodeCutTimeTextView
            android:textColor="#2b4cff"
            android:id="@+id/tv_resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="重新发送"
            app:layout_constraintBottom_toBottomOf="@+id/account"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/account"/>
        <View
            android:background="@color/divide_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            app:layout_constraintTop_toBottomOf="@+id/account"/>
        <EditText
            android:textSize="@dimen/sp_15"
            android:gravity="center_vertical"
            android:id="@+id/user_verification"
            android:background="@null"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_15"
            android:hint="请输入验证码"
            android:lines="1"
            android:singleLine="true"
            android:maxLength="4"
            android:inputType="number"
            android:imeOptions="actionNext"
            app:layout_constraintTop_toBottomOf="@+id/account"/>
        <View
            android:background="@color/divide_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            app:layout_constraintTop_toBottomOf="@+id/user_verification"/>
        <EditText
            android:textSize="@dimen/sp_14"
            android:gravity="center_vertical"
            android:id="@+id/user_pwd"
            android:background="@color/transparent_white"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_20"
            android:hint="请设置登录密码"
            android:lines="1"
            android:singleLine="true"
            android:maxLength="16"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_verification"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/login_pwd"
            android:drawableLeft="@mipmap/ic_warn"
            android:drawablePadding="@dimen/dp_5"
            app:layout_constraintLeft_toLeftOf="@+id/user_pwd"
            app:layout_constraintTop_toBottomOf="@+id/user_pwd"/>
        <ImageView
            android:id="@+id/pwd_eye"
            android:paddingRight="@dimen/dp_15"
            android:layout_width="@dimen/dp_35"
            android:layout_height="0dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/eye_nor"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/user_pwd"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/user_pwd"/>
        <ImageView
            android:id="@+id/iv_clear"
            android:padding="@dimen/dp_10"
            android:visibility="invisible"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_45"
            android:src="@mipmap/ic_clear_gray"
            app:layout_constraintBottom_toBottomOf="@+id/user_pwd"
            app:layout_constraintRight_toLeftOf="@+id/pwd_eye"
            app:layout_constraintTop_toTopOf="@+id/user_pwd"/>
        <View
            android:background="@color/divide_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            app:layout_constraintTop_toBottomOf="@+id/user_pwd"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:enabled="false"
        android:textSize="@dimen/sp_16"
        android:textColor="@drawable/button_textcolor"
        android:gravity="center"
        android:id="@+id/confirm"
        android:background="@drawable/button_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_marginRight="@dimen/dp_20"
        android:text="确定"
        app:layout_constraintTop_toBottomOf="@+id/cl_layout"/>
    <LinearLayout
        android:id="@+id/ll_to_login"
        android:padding="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm">
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账号？"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="#2946e6"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="直接登录"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_clause"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_layout">
        <CheckBox
            android:id="@+id/cb_select"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:checked="false"
            android:button="@null"
            android:drawableLeft="@drawable/varify_box_select"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="@color/black_dark"
            android:id="@+id/clause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
