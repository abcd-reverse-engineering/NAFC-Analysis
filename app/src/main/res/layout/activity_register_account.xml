<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingBottom="@dimen/dp_20"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="24sp"
        android:textColor="@color/black_dark"
        android:id="@+id/login_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_70"
        android:text="注册账号"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_35"
        app:layout_constraintTop_toBottomOf="@+id/login_label">
        <EditText
            android:textSize="@dimen/sp_15"
            android:gravity="center_vertical"
            android:id="@+id/account_phone"
            android:background="@null"
            android:paddingLeft="@dimen/dp_20"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_15"
            android:hint="请输入手机号"
            android:lines="1"
            android:singleLine="true"
            android:maxLength="11"
            android:inputType="number"
            android:imeOptions="actionNext"
            app:layout_constraintLeft_toRightOf="@+id/account_label"
            app:layout_constraintRight_toLeftOf="@+id/iv_clear"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="#999999"
            android:gravity="center_vertical"
            android:id="@+id/account_label"
            android:paddingLeft="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_45"
            android:text="+86"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/account_phone"/>
        <ImageView
            android:id="@+id/iv_clear"
            android:padding="@dimen/dp_10"
            android:visibility="invisible"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/ic_clear_gray"
            app:layout_constraintBottom_toBottomOf="@+id/account_phone"
            app:layout_constraintLeft_toRightOf="@+id/account_phone"
            app:layout_constraintRight_toLeftOf="@+id/tv_resend"
            app:layout_constraintTop_toTopOf="@+id/account_phone"/>
        <ui.view.CodeCutTimeTextView
            android:textColor="#2b4cff"
            android:id="@+id/tv_resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="重新发送"
            app:layout_constraintBottom_toBottomOf="@+id/account_phone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/account_phone"/>
        <EditText
            android:textSize="@dimen/sp_15"
            android:gravity="center_vertical"
            android:id="@+id/user_verification"
            android:background="@null"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_15"
            android:hint="请输入验证码"
            android:lines="1"
            android:singleLine="true"
            android:maxLength="4"
            android:inputType="number"
            android:imeOptions="actionNext"
            app:layout_constraintTop_toBottomOf="@+id/account_phone"/>
        <View
            android:background="@color/divide_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <View
            android:background="@color/divide_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            app:layout_constraintTop_toBottomOf="@+id/account_phone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:enabled="false"
        android:textSize="@dimen/sp_16"
        android:textColor="@drawable/button_textcolor"
        android:gravity="center"
        android:id="@+id/confirm"
        android:background="@drawable/button_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_150"
        android:layout_marginRight="@dimen/dp_20"
        android:text="下一步"
        app:layout_constraintTop_toBottomOf="@+id/cl_layout"/>
    <LinearLayout
        android:id="@+id/ll_to_login"
        android:padding="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm">
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账号？"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="#2946e6"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="直接登录"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
