<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/page_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65"/>
            <TextView
                android:textSize="15sp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/dp_20"
                android:text="选择关联平台"/>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bg_white_crop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="15dp">
                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/flow_layout"
                    android:paddingLeft="15dp"
                    android:paddingBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="10dp"
                    app:max_select="1"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/ll_acc_other"
                android:background="@drawable/bg_white_crop_head"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:id="@+id/tv_other_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平台名称"/>
                <EditText
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black_dark"
                    android:textColorHint="@color/colorGray"
                    android:gravity="center"
                    android:id="@+id/et_other_name"
                    android:background="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:hint="请输入平台名称"
                    android:singleLine="true"
                    android:maxLength="15"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/ll_acc_nomar"
                android:background="@drawable/bg_white_crop"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:id="@+id/tv_acc_name"
                    android:paddingLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="嫌疑人手机号"/>
                <EditText
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black_dark"
                    android:textColorHint="@color/colorGray"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@+id/et_account"
                    android:background="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:hint="请输入嫌疑人手机号"
                    android:maxLines="1"
                    android:maxLength="25"
                    android:layout_weight="1"
                    android:inputType="number"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_commit"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="添加"
                style="@style/buttonCrop"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <include layout="@layout/rl_title_with_back"/>
</FrameLayout>
