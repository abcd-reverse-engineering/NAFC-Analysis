<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/page_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/rl_title_with_back"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <View
                    android:id="@+id/label_app"
                    android:background="@drawable/group_item_bg"
                    android:layout_width="@dimen/dp_5"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginLeft="17dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textColor="@color/colorRed"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginStart="5dp"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="#303030"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="诈骗APP安装包"
                    android:layout_weight="1"/>
                <ui.view.SwitchButton
                    android:id="@+id/switchShow_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:checked="false"
                    app:kswBackDrawable="@drawable/switchbtn_yj"
                    app:kswThumbHeight="20dp"
                    app:kswThumbMarginBottom="1dp"
                    app:kswThumbMarginLeft="1dp"
                    app:kswThumbMarginRight="1dp"
                    app:kswThumbMarginTop="1dp"
                    app:kswThumbWidth="20dp"
                    app:kswTintColor="#ffffff"
                    app:layout_constraintBottom_toBottomOf="@+id/swicth_label"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/swicth_label"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/fl_add_app"
                android:background="@drawable/dialog_corner_bg"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp">
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/_2B4CFF"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取APP"
                    android:drawableLeft="@drawable/iv_add_app"
                    android:drawablePadding="5dp"/>
            </FrameLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/fl_add_name"
                android:background="@drawable/bg_white_crop_head_8dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp">
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="#303030"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="APP名称:"
                    android:drawablePadding="5dp"/>
                <EditText
                    android:textSize="@dimen/dp_14"
                    android:textColor="#303030"
                    android:textColorHint="#999999"
                    android:gravity="center_vertical"
                    android:id="@+id/et_app_name"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:hint="请填写APP名称"
                    android:singleLine="true"
                    android:maxLength="25"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/fl_app_logo"
                android:background="@drawable/bg_white_crop_foot_8dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="1dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="#303030"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="APP的logo截图"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/iv_add_logo"
                    android:background="@drawable/iv_pic_add"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <FrameLayout
                android:orientation="vertical"
                android:id="@+id/fl_app_view"
                android:background="@drawable/dialog_corner_bg"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="15sp"
                            android:textColor="#1d1a33"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="app名称："
                            android:singleLine="true"/>
                        <TextView
                            android:textSize="15sp"
                            android:textColor="#1d1a33"
                            android:id="@+id/tv_app_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:textSize="15sp"
                            android:textColor="#1d1a33"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="APP版本："
                            android:singleLine="true"/>
                        <TextView
                            android:textSize="15sp"
                            android:textColor="#1d1a33"
                            android:ellipsize="end"
                            android:id="@+id/tv_app_vers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_centerVertical="true"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:textSize="15sp"
                            android:textColor="#1d1a33"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="app包名："
                            android:singleLine="true"/>
                        <TextView
                            android:textSize="15sp"
                            android:textColor="#1d1a33"
                            android:ellipsize="end"
                            android:id="@+id/tv_app_pkg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_centerVertical="true"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_gravity="right"
                    android:id="@+id/iv_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/ic_launcher"/>
            </FrameLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <View
                    android:id="@+id/label_zxing"
                    android:background="@drawable/group_item_bg"
                    android:layout_width="@dimen/dp_5"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginLeft="17dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textColor="@color/colorRed"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginStart="5dp"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="#303030"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="是否有下载二维码"
                    android:layout_weight="1"/>
                <ui.view.SwitchButton
                    android:id="@+id/switchShow_zxing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:checked="false"
                    app:kswBackDrawable="@drawable/switchbtn_yj"
                    app:kswThumbHeight="20dp"
                    app:kswThumbMarginBottom="1dp"
                    app:kswThumbMarginLeft="1dp"
                    app:kswThumbMarginRight="1dp"
                    app:kswThumbMarginTop="1dp"
                    app:kswThumbWidth="20dp"
                    app:kswTintColor="#ffffff"
                    app:layout_constraintBottom_toBottomOf="@+id/swicth_label"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/swicth_label"/>
            </LinearLayout>
            <FrameLayout
                android:orientation="vertical"
                android:id="@+id/fl_app_zxing"
                android:background="@drawable/dialog_corner_bg"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/iv_add_zxing"
                    android:background="@drawable/iv_pic_add"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"/>
            </FrameLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:textColor="@color/colorRed"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginStart="25dp"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="#303030"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="受害人账号"
                    android:layout_weight="1"/>
            </LinearLayout>
            <EditText
                android:textSize="@dimen/dp_14"
                android:textColor="#303030"
                android:textColorHint="#999999"
                android:gravity="center_vertical"
                android:id="@+id/et_app_victimAccount"
                android:background="@drawable/dialog_corner_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:minHeight="50dp"
                android:hint="请输入受害人的APP账号"
                android:maxLength="20"
                android:paddingStart="30dp"
                android:paddingEnd="10dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:textColor="@color/colorRed"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginStart="25dp"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="#303030"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="受害人密码"
                    android:layout_weight="1"/>
            </LinearLayout>
            <EditText
                android:textSize="@dimen/dp_14"
                android:textColor="#303030"
                android:textColorHint="#999999"
                android:gravity="center_vertical"
                android:id="@+id/et_app_victimPwd"
                android:background="@drawable/dialog_corner_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:minHeight="50dp"
                android:hint="请输入受害人的APP密码"
                android:maxLength="40"
                android:paddingStart="30dp"
                android:paddingEnd="10dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:textColor="@color/colorRed"
                    android:layout_gravity="center_vertical"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginStart="25dp"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="#303030"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="邀请码"
                    android:layout_weight="1"/>
            </LinearLayout>
            <EditText
                android:textSize="@dimen/dp_14"
                android:textColor="#303030"
                android:textColorHint="#999999"
                android:gravity="center_vertical"
                android:id="@+id/et_app_invitationCode"
                android:background="@drawable/dialog_corner_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:minHeight="50dp"
                android:hint="请输入诈骗APP的邀请码"
                android:maxLength="20"
                android:paddingStart="30dp"
                android:paddingEnd="10dp"/>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="bottom"
                android:background="@color/page_gray"
                android:layout_width="match_parent"
                android:layout_height="75dp">
                <Button
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:id="@+id/btn_commit"
                    android:background="@drawable/check_update_bg"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:text="保存"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
