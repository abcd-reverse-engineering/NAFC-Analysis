<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/page_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/rl_title_with_back"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/rl_title">
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp">
            <LinearLayout
                android:background="@drawable/bg_white_crop_head"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <View
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/group_item_bg"
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_15"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_case_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/white"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="#666666"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="报案时间："
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/case_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/white"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="#666666"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="采集编号："
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/case_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/bg_white_crop_foot"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="#666666"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="诈骗类型："
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/polic_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/bg_white_crop_head"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp">
                <View
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/group_item_bg"
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_15"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="涉案信息"
                    android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/white"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="#666666"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_shizhu_info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="事主信息*个"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_shizhu_detial"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:text="详情"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/arrow_gray_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/white"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="#666666"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_case_account"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="涉案账户*个"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_case_account_detial"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:text="详情"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/arrow_gray_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_criminal_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="#666666"
                    android:gravity="center_vertical"
                    android:background="@drawable/white"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="嫌疑人电话："
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:id="@+id/ll_call"
                    android:background="@drawable/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_criminal_call"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:text="通话类*个"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_criminal_call_detial"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:text="详情"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/arrow_gray_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_recharge"
                    android:background="@drawable/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_criminal_recharge"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:text="充值类*个"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_criminal_recharge_detial"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:text="详情"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/arrow_gray_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_relation"
                    android:background="@drawable/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_criminal_relation"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:text="关联类*个"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_criminal_relation_detial"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:text="详情"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/arrow_gray_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_delivery"
                    android:background="@drawable/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_criminal_delivery"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:text="寄递类*个"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_criminal_delivery_detial"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:text="详情"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/arrow_gray_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_sms"
                android:background="@drawable/bg_white_crop_foot"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="#666666"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_criminal_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="涉诈短信*个"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_criminal_sms_detial"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:text="详情"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/arrow_gray_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_criminal_net"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="#666666"
                    android:gravity="center_vertical"
                    android:background="@drawable/white"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="嫌疑人互联网信息："
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:id="@+id/ll_net"
                    android:background="@drawable/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_criminal_net"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:text="互联网账号*个"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_criminal_net_detial"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:text="详情"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/arrow_gray_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_app"
                    android:background="@drawable/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_criminal_app"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:text="诈骗APP*个"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_criminal_app_detial"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:text="详情"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/arrow_gray_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_websit"
                    android:background="@drawable/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_criminal_websit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:text="涉诈网址*个"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_criminal_websit_detial"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:text="详情"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/arrow_gray_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_bottom"
        android:background="@drawable/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_idvrfy_start">
            <CheckBox
                android:id="@+id/cb_select"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:checked="false"
                android:button="@null"
                android:drawableLeft="@drawable/varify_box_select"/>
            <TextView
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请确认上传的案件信息全部为真实信息"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_commit"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="提交报案信息"
            style="@style/buttonCrop"/>
    </LinearLayout>
</RelativeLayout>
