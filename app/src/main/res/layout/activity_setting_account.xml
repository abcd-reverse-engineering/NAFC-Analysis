<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/page_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/rl_title_with_back"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_layout"
        android:background="@drawable/bg_white_crop"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_title">
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:id="@+id/tv_ed_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:text="修改手机号"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="#666666"
            android:gravity="center_vertical"
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_marginRight="5dp"
            android:text="1**"
            app:layout_constraintRight_toLeftOf="@+id/switchShow_check"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/switchShow_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:src="@mipmap/arrow_gray_right"
            app:layout_constraintBottom_toBottomOf="@+id/tv_ed_phone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_ed_phone"/>
        <View
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_ed_phone"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:id="@+id/tv_ed_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_1"
            android:text="修改密码"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_ed_phone"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/arrow_gray_right"
            app:layout_constraintBottom_toBottomOf="@+id/tv_ed_pwd"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_ed_pwd"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/rl_logout_view"
        android:background="@drawable/bg_white_crop"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_layout">
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:text="注销账号"
            android:layout_weight="1"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="#666666"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_marginRight="5dp"
            android:text="请谨慎操作"
            android:layout_toLeftOf="@+id/iv_arrw"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_arrw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/arrow_gray_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
