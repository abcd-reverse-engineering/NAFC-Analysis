<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/page_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/rl_title_with_back"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/myScrollView"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp">
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bg_white_crop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <View
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/group_item_bg"
                        android:layout_width="@dimen/dp_3"
                        android:layout_height="@dimen/dp_15"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="15dp"
                        android:text="APP信息"
                        android:singleLine="true"/>
                </LinearLayout>
                <FrameLayout
                    android:orientation="vertical"
                    android:id="@+id/fl_app_view"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <View
                        android:background="@color/div_line"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="80dp">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="15sp"
                                android:textColor="#666666"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="APP名称："
                                android:singleLine="true"/>
                            <TextView
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:id="@+id/tv_app_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="发财冠军"
                                android:singleLine="true"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">
                            <TextView
                                android:textSize="15sp"
                                android:textColor="#666666"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="APP版本："
                                android:singleLine="true"/>
                            <TextView
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:ellipsize="end"
                                android:id="@+id/tv_app_vers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1.1"
                                android:singleLine="true"
                                android:layout_centerVertical="true"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">
                            <TextView
                                android:textSize="15sp"
                                android:textColor="#666666"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="APP包名："
                                android:singleLine="true"/>
                            <TextView
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:ellipsize="end"
                                android:id="@+id/tv_app_pkg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="com.baidu.ccxc"
                                android:singleLine="true"
                                android:layout_centerVertical="true"/>
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:layout_gravity="right"
                        android:id="@+id/iv_app_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="15dp"/>
                </FrameLayout>
                <RelativeLayout
                    android:id="@+id/fl_app_mini"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp">
                    <View
                        android:background="@color/div_line"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:id="@+id/tv_app_name_mini_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="APP名称："
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:ellipsize="end"
                        android:id="@+id/tv_app_name_mini"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:text="国家反诈中心"
                        android:singleLine="true"
                        android:layout_toRightOf="@+id/tv_app_name_mini_tips"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:orientation="vertical"
                    android:id="@+id/fl_app_zxing"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="1dp">
                    <View
                        android:background="@color/div_line"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:id="@+id/iv_add_zxing_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="APP下载二维码"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/iv_zxing"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="15dp"
                        android:layout_below="@+id/iv_add_zxing_tips"/>
                </RelativeLayout>
                <RelativeLayout
                    android:orientation="vertical"
                    android:id="@+id/fl_app_logo"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="1dp">
                    <View
                        android:background="@color/div_line"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:id="@+id/iv_add_logo_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="APP的logo截图"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/iv_app_logo"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="15dp"
                        android:layout_below="@+id/iv_add_logo_tips"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:textColor="@color/colorRed"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginStart="25dp"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="#303030"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="受害人账号"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/dp_14"
                android:textColor="#303030"
                android:textColorHint="#999999"
                android:gravity="center_vertical"
                android:id="@+id/et_app_victimAccount"
                android:background="@drawable/bg_white_crop"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:hint="请输入受害人的APP账号"
                android:singleLine="true"
                android:maxLength="100"
                android:paddingStart="30dp"
                android:paddingEnd="10dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:textColor="@color/colorRed"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginStart="25dp"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="#303030"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="受害人密码"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/dp_14"
                android:textColor="#303030"
                android:textColorHint="#999999"
                android:gravity="center_vertical"
                android:id="@+id/et_app_victimPwd"
                android:background="@drawable/bg_white_crop"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:hint="请输入受害人的APP密码"
                android:singleLine="true"
                android:maxLength="100"
                android:paddingStart="30dp"
                android:paddingEnd="10dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/ll_invitationCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:textColor="@color/colorRed"
                    android:layout_gravity="center_vertical"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginStart="25dp"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="#303030"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="邀请码"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/dp_14"
                android:textColor="#303030"
                android:textColorHint="#999999"
                android:gravity="center_vertical"
                android:id="@+id/et_app_invitationCode"
                android:background="@drawable/bg_white_crop"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:hint="请输入诈骗APP的邀请码"
                android:singleLine="true"
                android:maxLength="100"
                android:paddingStart="30dp"
                android:paddingEnd="10dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
