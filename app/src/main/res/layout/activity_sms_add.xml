<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/page_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/rl_title_with_back"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rl_title">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_accpt_phone_label"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_accpt_phone_label"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/colorBlack88"
                android:gravity="center_vertical"
                android:id="@+id/tv_accpt_phone_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:minHeight="50dp"
                android:text="收件人短信号码"
                android:layout_marginStart="@dimen/dp_15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <EditText
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black_dark"
                android:gravity="center_vertical"
                android:id="@+id/tv_victim_phone"
                android:background="@drawable/bg_white_crop"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="15dp"
                android:hint="请输入或粘贴收件人短信号码"
                android:lines="1"
                android:singleLine="true"
                android:maxLength="25"
                android:digits="1234567890+"
                android:imeOptions="actionNext"
                app:layout_constraintTop_toBottomOf="@+id/tv_accpt_phone_label"/>
            <TextView
                android:textColor="@color/colorRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_phone_label"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_phone_label"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/colorBlack88"
                android:gravity="center_vertical"
                android:id="@+id/tv_phone_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:minHeight="50dp"
                android:text="诈骗短信号码"
                android:layout_marginStart="@dimen/dp_15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_victim_phone"/>
            <EditText
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black_dark"
                android:gravity="center_vertical"
                android:id="@+id/et_phone"
                android:background="@drawable/bg_white_crop"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_margin="15dp"
                android:hint="请输入或粘贴诈骗短信号码"
                android:lines="1"
                android:singleLine="true"
                android:maxLength="25"
                android:digits="1234567890+"
                android:imeOptions="actionNext"
                app:layout_constraintTop_toBottomOf="@+id/tv_phone_label"/>
            <TextView
                android:textColor="@color/colorRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_time_label"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_time_label"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/colorBlack88"
                android:gravity="center_vertical"
                android:id="@+id/tv_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:minHeight="50dp"
                android:text="诈骗短信接收时间"
                android:layout_marginStart="@dimen/dp_15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_phone"/>
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black_dark"
                android:gravity="center_vertical"
                android:id="@+id/tv_time"
                android:background="@drawable/bg_white_crop"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_margin="15dp"
                android:hint="请选择诈骗短信接收时间"
                android:lines="1"
                android:singleLine="true"
                android:drawableRight="@mipmap/arrow_gray_right"
                android:imeOptions="actionNext"
                app:layout_constraintTop_toBottomOf="@+id/tv_time_label"/>
            <TextView
                android:textColor="@color/colorRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_describe_label"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_describe_label"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/colorBlack88"
                android:gravity="center_vertical"
                android:id="@+id/tv_describe_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:minHeight="50dp"
                android:text="诈骗短信内容"
                android:layout_marginStart="@dimen/dp_15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_time"/>
            <ui.view.MyEdittext
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black_dark"
                android:gravity="top"
                android:id="@+id/et_describe"
                android:background="@drawable/bg_white_crop"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_25"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_170"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:hint="请输入或粘贴短信内容"
                android:maxLength="500"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_describe_label"/>
            <TextView
                android:enabled="true"
                android:textSize="@dimen/sp_18"
                android:textColor="@drawable/button_textcolor"
                android:gravity="center"
                android:id="@+id/confirm"
                android:background="@drawable/button_bg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="30dp"
                android:text="添加"
                app:layout_constraintTop_toBottomOf="@+id/et_describe"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
