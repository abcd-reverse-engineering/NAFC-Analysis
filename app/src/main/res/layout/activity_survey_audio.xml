<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/page_gray"
    android:descendantFocusability="beforeDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/rl_title_with_back_normal"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_above="@+id/btn_commit"
        android:layout_below="@+id/rl_title">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_victim_tag"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/dp_25"
                android:src="@mipmap/ic_tag_blue"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@+id/tv_victim_label"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_victim_label"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                android:textColor="@color/black_dark"
                android:id="@+id/tv_victim_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:text="事主录音"
                app:layout_constraintLeft_toRightOf="@+id/iv_victim_tag"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:id="@+id/tv_victim_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="录制时只需选择事主声音，最多可选9条"
                app:layout_constraintBottom_toBottomOf="@+id/tv_victim_label"
                app:layout_constraintLeft_toRightOf="@+id/tv_victim_label"
                app:layout_constraintTop_toTopOf="@+id/tv_victim_label"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_10"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@+id/tv_victim_label"/>
            <include
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerview"
                layout="@layout/layout_add"/>
            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_victim"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="iv_victim_tag,tv_victim_label,tv_victim_tip,recyclerview,ll_add"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@drawable/bg_white_crop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_15"
                app:layout_constraintTop_toBottomOf="@+id/ll_add">
                <ImageView
                    android:id="@+id/iv_suspect_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:src="@mipmap/ic_tag_blue"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_suspect_label"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_suspect_label"/>
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    android:textColor="@color/black_dark"
                    android:id="@+id/tv_suspect_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="嫌疑人录音"
                    app:layout_constraintLeft_toRightOf="@+id/iv_suspect_tag"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:id="@+id/tv_suspect_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="（最多可添加5条嫌疑人录音）"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_suspect_label"
                    app:layout_constraintLeft_toRightOf="@+id/tv_suspect_label"
                    app:layout_constraintTop_toTopOf="@+id/tv_suspect_label"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_suspect"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toBottomOf="@+id/tv_suspect_label"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/ll_add_suspect"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_15"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerview_suspect">
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@mipmap/ic_add_info"/>
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/_2B4CFF"
                        android:id="@+id/tv_add_suspect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="添加嫌疑人录音"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_commit"
        android:layout_marginBottom="@dimen/dp_15"
        android:text="确定"
        android:layout_alignParentBottom="true"
        style="@style/button"/>
</RelativeLayout>
