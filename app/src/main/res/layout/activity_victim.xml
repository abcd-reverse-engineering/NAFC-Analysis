<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/page_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/rl_title_with_back"/>
    <ui.view.MyScrollView
        android:id="@+id/myScrollView"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bg_white_crop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp">
                <FrameLayout
                    android:paddingRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:textColor="@color/colorRed"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:layout_marginStart="8dp"/>
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="#1d1a33"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名"
                        android:layout_marginStart="15dp"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <EditText
                        android:textSize="@dimen/sp_14"
                        android:textColor="#1d1a33"
                        android:textColorHint="#999999"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_peop_name"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_15"
                        android:hint="请填写姓名"
                        android:drawablePadding="@dimen/dp_15"
                        android:layout_marginStart="@dimen/dp_100"/>
                </FrameLayout>
                <View
                    android:background="@color/div_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
                <FrameLayout
                    android:background="@color/white"
                    android:paddingRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:textColor="@color/colorRed"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:layout_marginStart="8dp"/>
                    <TextView
                        android:textColor="@color/colorRed"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"/>
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="#1d1a33"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系电话"
                        android:layout_marginStart="15dp"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <EditText
                        android:textSize="@dimen/sp_14"
                        android:textColor="#1d1a33"
                        android:textColorHint="#999999"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_num_phone"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_15"
                        android:hint="请填写电话号码"
                        android:maxLength="20"
                        android:drawablePadding="@dimen/dp_15"
                        android:inputType="number"
                        android:layout_marginStart="@dimen/dp_100"/>
                </FrameLayout>
                <View
                    android:background="@color/div_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
                <FrameLayout
                    android:background="@color/white"
                    android:paddingRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:textColor="@color/colorRed"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_cre_type_xing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:layout_marginStart="8dp"/>
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="#1d1a33"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="证件类型"
                        android:layout_marginStart="15dp"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="#1d1a33"
                        android:textColorHint="#999999"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_peop_credent_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_15"
                        android:hint="请选择证件类型"
                        android:drawableRight="@mipmap/arrow_gray_right"
                        android:drawablePadding="@dimen/dp_15"
                        android:layout_marginStart="@dimen/dp_100"/>
                </FrameLayout>
                <View
                    android:background="@color/div_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
                <FrameLayout
                    android:background="@color/white"
                    android:paddingRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:textColor="@color/colorRed"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_cre_num_xing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:layout_marginStart="8dp"/>
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="#1d1a33"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="证件号"
                        android:layout_marginStart="15dp"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <EditText
                        android:textSize="@dimen/sp_14"
                        android:textColor="#1d1a33"
                        android:textColorHint="#999999"
                        android:gravity="center_vertical"
                        android:id="@+id/et_peop_credent_number"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_15"
                        android:hint="请填写证件号"
                        android:maxLength="50"
                        android:digits="_0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLIMNOPQRSTUVWXYZ"
                        android:drawablePadding="@dimen/dp_15"
                        android:layout_marginStart="@dimen/dp_100"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:background="@color/page_gray"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp">
                <Button
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:id="@+id/btn_commit"
                    android:background="@drawable/button_bg"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:text="保存"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>
            <View
                android:background="@color/page_gray"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        </LinearLayout>
    </ui.view.MyScrollView>
</LinearLayout>
