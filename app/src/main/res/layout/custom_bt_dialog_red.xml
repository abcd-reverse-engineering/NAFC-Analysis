<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/layout"
    android:background="@drawable/dialog_corner_bg"
    android:scrollbars="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:id="@+id/tv_title"
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"/>
    <TextView
        android:textSize="14sp"
        android:textColor="#ee2222"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/tv_subtitle"
        android:paddingLeft="15dp"
        android:paddingTop="2dp"
        android:paddingRight="15dp"
        android:paddingBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:background="@color/div_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:textColor="#7f2d4aeb"
            android:id="@+id/btn_cancel"
            android:background="@drawable/left_btn_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="取消"
            android:layout_weight="1"/>
        <View
            android:background="@color/div_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <Button
            android:textColor="#2d4aeb"
            android:id="@+id/btn_confirm"
            android:background="@drawable/right_btn_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="确定"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
