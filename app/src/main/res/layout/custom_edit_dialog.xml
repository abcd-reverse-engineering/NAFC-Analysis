<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/layout"
            android:background="@drawable/dialog_corner_bg"
            android:paddingTop="@dimen/dp_30"
            android:paddingBottom="@dimen/dp_15"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_35">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/shape_group_edit_bg"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:id="@+id/customdialog_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ip机号："/>
                <EditText
                    android:textSize="16sp"
                    android:id="@+id/et_content"
                    android:background="@null"
                    android:padding="@dimen/dp_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="机号"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="最多可设置8个字，不含任何符号和Emoji表情"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <Button
                    android:textSize="16sp"
                    android:textColor="@color/blue"
                    android:id="@+id/cancel_btn"
                    android:background="@drawable/bg_stroke_blue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:text="取消"
                    android:layout_weight="1"/>
                <Button
                    android:textSize="16sp"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/confirm_btn"
                    android:background="@drawable/button_bg_them_small_radius"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:text="确定"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_top_icon"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_65"
            android:src="@mipmap/ic_group_create"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</ScrollView>
