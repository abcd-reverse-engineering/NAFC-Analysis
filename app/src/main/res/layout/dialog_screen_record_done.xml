<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_5">
        <ImageView
            android:id="@+id/iv_close"
            android:padding="@dimen/dp_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/close"
            android:layout_alignParentRight="true"/>
        <View
            android:id="@+id/contv"
            android:layout_width="wrap_content"
            android:layout_height="290dp"/>
        <FrameLayout
            android:orientation="vertical"
            android:id="@+id/cardview"
            android:background="@drawable/dialog_corner_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contv"
            android:layout_centerInParent="true">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/dp_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rl_view"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/dp_150"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_50"
                    android:layout_marginEnd="@dimen/dp_50"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/tv_evidence"
                    android:background="@drawable/shape_electronic_evidence_update"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/electronic_evidence"
                    android:layout_marginEnd="@dimen/dp_15"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/tv_record"
                    app:layout_constraintTop_toBottomOf="@+id/rl_view"
                    app:layout_constraintVertical_chainStyle="spread"/>
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/tv_record"
                    android:background="@drawable/shape_electronic_evidence_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="确定"
                    app:layout_constraintLeft_toRightOf="@+id/tv_evidence"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rl_view"
                    app:layout_constraintVertical_chainStyle="spread"/>
                <TextView
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/colorGray"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="报案后在线上传涉案线索"
                    android:drawablePadding="@dimen/dp_5"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_evidence"
                    app:layout_constraintRight_toRightOf="@+id/tv_evidence"
                    app:layout_constraintTop_toBottomOf="@+id/tv_evidence"/>
                <TextView
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/colorGray"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="举报非法可疑电信诈骗行为"
                    android:drawablePadding="@dimen/dp_5"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_record"
                    app:layout_constraintRight_toRightOf="@+id/tv_record"
                    app:layout_constraintTop_toBottomOf="@+id/tv_record"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/shape_record_bg"
            android:layout_width="match_parent"
            android:layout_height="415dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="13dp">
            <TextView
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:id="@+id/tv_rec_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="录制已完成"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="335dp">
                <ImageView
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:src="@drawable/record_dlg_bg"
                    android:scaleType="fitXY"/>
                <RelativeLayout
                    android:id="@+id/imageview_layout"
                    android:background="@mipmap/record_audio_big"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginRight="20dp">
                    <ui.view.RecordItemJzvd
                        android:id="@+id/imageview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </RelativeLayout>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/file_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mp3"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"/>
                <TextView
                    android:textColor="@color/white"
                    android:layout_gravity="right"
                    android:id="@+id/file_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"/>
            </FrameLayout>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:id="@+id/tv_save_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="录制已完成，存储路径：/sdcard/ScreenVideo"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
