<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/dialog_corner_bg"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="驳回原因："
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RadioButton
            android:textSize="15sp"
            android:textColor="#333333"
            android:id="@+id/rb_pic_mh"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/rb__select_style"
            android:text="手持证件照片模糊"/>
        <RadioButton
            android:textSize="15sp"
            android:textColor="#333333"
            android:id="@+id/rb_pic_bf"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:button="@drawable/rb__select_style"
            android:text="人像与证件照片不符"/>
        <RadioButton
            android:textSize="15sp"
            android:textColor="#333333"
            android:id="@+id/rb_other"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:checked="true"
            android:button="@drawable/rb__select_style"
            android:text="其他原因"/>
    </RadioGroup>
    <EditText
        android:textSize="@dimen/sp_15"
        android:gravity="top"
        android:id="@+id/et_other_reson"
        android:background="@drawable/bg_edit_style"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:hint="请输入其他原因"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rg_group"/>
    <Button
        android:gravity="center"
        android:id="@+id/confirm"
        android:layout_marginTop="@dimen/dp_20"
        android:text="提交"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_other_reson"
        style="@style/button"/>
</androidx.constraintlayout.widget.ConstraintLayout>
