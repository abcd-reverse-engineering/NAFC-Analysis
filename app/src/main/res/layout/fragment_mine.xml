<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/page_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <FrameLayout
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:background="@mipmap/ic_blue_bg_big"
                android:layout_width="match_parent"
                android:layout_height="295dp"
                android:layout_marginTop="-2dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_head"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:layout_marginTop="60dp">
                    <ImageView
                        android:id="@+id/headimg"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:src="@drawable/iv_head_img"
                        android:layout_marginStart="@dimen/dp_15"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:id="@+id/tv_Level_lb"
                        android:background="@drawable/bg_honor_title"
                        android:paddingLeft="8dp"
                        android:paddingTop="3dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="3dp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="反诈小白"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="@+id/headimg"
                        app:layout_constraintRight_toRightOf="@+id/headimg"/>
                    <TextView
                        android:textSize="@dimen/sp_20"
                        android:textColor="#ffffff"
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="您好，"
                        android:layout_marginStart="@dimen/dp_10"
                        app:layout_constraintLeft_toRightOf="@+id/headimg"
                        app:layout_constraintTop_toTopOf="@+id/headimg"
                        app:layout_constraintVertical_chainStyle="spread"/>
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="#ffffff"
                        android:id="@+id/tv_explain"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击查看个人信息 &gt;"
                        android:layout_marginStart="@dimen/dp_5"
                        app:layout_constraintBottom_toBottomOf="@+id/headimg"
                        app:layout_constraintLeft_toRightOf="@+id/headimg"
                        app:layout_constraintVertical_chainStyle="spread"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:id="@+id/ll_datile"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="25dp">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/ll_report_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:id="@+id/tv_repNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:text="举报记录"/>
                            <TextView
                                android:textSize="12sp"
                                android:id="@+id/report_red_tip"
                                android:background="@drawable/bg_red"
                                android:visibility="invisible"
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="2dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:background="@color/white"
                        android:layout_width="0.5dp"
                        android:layout_height="25dp"
                        android:alpha="0.3"/>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/ll_evidence_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:id="@+id/tv_evidNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:text="报案记录"/>
                            <TextView
                                android:textSize="12sp"
                                android:id="@+id/case_red_tip"
                                android:background="@drawable/bg_red"
                                android:visibility="invisible"
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="2dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:background="@color/white"
                        android:layout_width="0.5dp"
                        android:layout_height="25dp"
                        android:alpha="0.3"/>
                    <View
                        android:background="@color/white"
                        android:layout_width="0.5dp"
                        android:layout_height="25dp"
                        android:alpha="0.3"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@drawable/bg_white_crop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp">
                        <RelativeLayout
                            android:orientation="horizontal"
                            android:id="@+id/ll_feedback"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_50_h">
                            <ImageView
                                android:id="@+id/iv_yjfk"
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="wrap_content"
                                android:src="@drawable/iv_faceback"
                                android:scaleType="fitCenter"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/dp_2"/>
                            <TextView
                                android:textSize="@dimen/sp_14"
                                android:textColor="#333333"
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:text="反馈与帮助"
                                android:layout_weight="1"
                                android:layout_toRightOf="@+id/iv_yjfk"
                                android:layout_centerVertical="true"/>
                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:src="@mipmap/arrow_gray_right"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"/>
                            <View
                                android:background="@color/divide_line"
                                android:layout_width="match_parent"
                                android:layout_height="0.55dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_alignParentBottom="true"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:orientation="horizontal"
                            android:id="@+id/ll_ablout_app"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_50_h">
                            <ImageView
                                android:id="@+id/iv_gywe"
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="wrap_content"
                                android:src="@drawable/iv_about_us"
                                android:scaleType="fitCenter"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/dp_2"/>
                            <TextView
                                android:textSize="@dimen/sp_14"
                                android:textColor="#333333"
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:text="@string/about_us_str"
                                android:layout_weight="1"
                                android:layout_toRightOf="@+id/iv_gywe"
                                android:layout_centerVertical="true"/>
                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:src="@mipmap/arrow_gray_right"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"/>
                            <View
                                android:background="@color/divide_line"
                                android:layout_width="match_parent"
                                android:layout_height="0.55dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_alignParentBottom="true"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:orientation="horizontal"
                            android:id="@+id/ll_user_note"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_50_h">
                            <ImageView
                                android:id="@+id/iv_shouce"
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="wrap_content"
                                android:src="@drawable/iv_shouce_btn"
                                android:scaleType="fitCenter"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/dp_2"/>
                            <TextView
                                android:textSize="@dimen/sp_14"
                                android:textColor="#333333"
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:text="用户手册"
                                android:layout_weight="1"
                                android:layout_toRightOf="@+id/iv_shouce"
                                android:layout_centerVertical="true"/>
                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:src="@mipmap/arrow_gray_right"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"/>
                            <View
                                android:background="@color/divide_line"
                                android:layout_width="match_parent"
                                android:layout_height="0.55dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_alignParentBottom="true"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:orientation="horizontal"
                            android:id="@+id/ll_setting"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_50_h">
                            <ImageView
                                android:id="@+id/iv_setting"
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="wrap_content"
                                android:src="@drawable/iv_setting"
                                android:scaleType="fitCenter"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/dp_2"/>
                            <TextView
                                android:textSize="@dimen/sp_14"
                                android:textColor="#333333"
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:text="设置"
                                android:layout_weight="1"
                                android:layout_toRightOf="@+id/iv_setting"
                                android:layout_centerVertical="true"/>
                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:src="@mipmap/arrow_gray_right"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</FrameLayout>
