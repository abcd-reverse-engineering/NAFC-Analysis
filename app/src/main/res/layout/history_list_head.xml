<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/page_gray"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="@color/page_gray"
        android:layout_width="match_parent"
        android:layout_height="15dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/dialog_corner_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:textColor="#fff"
            android:gravity="center"
            android:id="@+id/tv_case_type"
            android:background="@drawable/iv_user_tip"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"
            android:paddingRight="8dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="15dp">
            <TextView
                android:textSize="16sp"
                android:textColor="#1d1a33"
                android:ellipsize="end"
                android:id="@+id/casecategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="18"
                android:singleLine="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="10sp"
                android:textColor="#999999"
                android:ellipsize="end"
                android:id="@+id/tv_self"
                android:background="@drawable/evidence_self_bg"
                android:paddingLeft="4dp"
                android:paddingTop="1dp"
                android:paddingRight="4dp"
                android:paddingBottom="1dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:layout_toRightOf="@+id/casecategory"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView
            android:textSize="12sp"
            android:textColor="#2b4cff"
            android:id="@+id/tv_case_num"
            android:background="@drawable/evidence_id_bg"
            android:padding="3dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#333333"
            android:id="@+id/tv_report_name"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="15dp"/>
        <ImageView
            android:id="@+id/iv_dk_tag"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/iv_dk_tag"/>
        <FrameLayout
            android:background="@drawable/replay_bg"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@color/page_gray"
            android:layout_width="match_parent"
            android:layout_height="15dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_report_prog"
            android:background="@drawable/dialog_corner_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="#fff"
                android:gravity="center"
                android:background="@drawable/iv_user_tip"
                android:paddingLeft="8dp"
                android:paddingTop="2dp"
                android:paddingRight="8dp"
                android:paddingBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="举报反馈"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_report_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
