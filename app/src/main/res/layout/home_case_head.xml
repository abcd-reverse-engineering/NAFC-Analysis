<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:minWidth="@dimen/dp_5"
        app:delay_time="5000"
        app:image_scale_type="fit_xy"
        app:indicator_drawable_selected="@drawable/white_radius"
        app:indicator_drawable_unselected="@drawable/gray_radius"
        app:indicator_height="@dimen/dp_5"
        app:indicator_width="@dimen/dp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ui.fragment.ToolView
        android:id="@+id/view_tool"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ui.fragment.StandardView
        android:id="@+id/view_standard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
