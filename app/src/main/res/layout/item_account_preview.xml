<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_white_crop"
    android:paddingBottom="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_15">
    <TextView
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/iv_top"
        android:background="@drawable/iv_report_crop"
        android:paddingRight="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="涉案账户"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/iv_clear"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/iv_delet_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:id="@+id/tv_suspect_type_label"
        android:paddingBottom="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_18"
        android:text="嫌疑人账户类型"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_top"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/black_dark"
        android:gravity="center"
        android:id="@+id/tv_suspect_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="10dp"
        android:text="银行储蓄卡"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/tv_suspect_type_label"
        app:layout_constraintLeft_toRightOf="@+id/tv_suspect_type_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_suspect_type_label"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:id="@+id/tv_suspect_account_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:text="嫌疑人账号"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_suspect_type"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/black_dark"
        android:gravity="center"
        android:id="@+id/tv_suspect_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="10dp"
        android:text="5050 0002 02014"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/tv_suspect_account_label"
        app:layout_constraintLeft_toRightOf="@+id/tv_suspect_account_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_suspect_account_label"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:id="@+id/tv_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:text="转账时间"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_suspect_account"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/black_dark"
        android:gravity="center"
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="10dp"
        android:text="2020-12-24-10:24:26"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/tv_time_label"
        app:layout_constraintLeft_toRightOf="@+id/tv_time_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_time_label"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:id="@+id/tv_trans_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:text="转账方式"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/black_dark"
        android:gravity="center"
        android:id="@+id/tv_trans"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="10dp"
        android:text="ATM卡卡转账"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/tv_trans_label"
        app:layout_constraintLeft_toRightOf="@+id/tv_trans_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_trans_label"/>
</androidx.constraintlayout.widget.ConstraintLayout>
