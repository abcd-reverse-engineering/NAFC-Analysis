<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_white_crop"
    android:paddingRight="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_10">
    <TextView
        android:textSize="@dimen/sp_18"
        android:textColor="@color/black_dark"
        android:id="@+id/tv_case_name"
        android:paddingBottom="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:id="@+id/tv_case_victim_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:text="事主："
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_case_name"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/black_dark"
        android:gravity="center"
        android:id="@+id/tv_case_victim"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/tv_case_victim_label"
        app:layout_constraintLeft_toRightOf="@+id/tv_case_victim_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_case_victim_label"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:id="@+id/tv_victim_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:text="证件号："
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_case_victim"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/black_dark"
        android:gravity="center"
        android:id="@+id/tv_victim_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/tv_victim_id_label"
        app:layout_constraintLeft_toRightOf="@+id/tv_victim_id_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_victim_id_label"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:id="@+id/tv_case_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:text="报案时间："
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_victim_id"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/black_dark"
        android:gravity="center"
        android:id="@+id/tv_case_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/tv_case_time_label"
        app:layout_constraintLeft_toRightOf="@+id/tv_case_time_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_case_time_label"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:id="@+id/tv_stop_payment_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:text="嫌疑人止付账户："
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_case_time"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/black_dark"
        android:gravity="center"
        android:id="@+id/tv_stop_payment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/tv_stop_payment_label"
        app:layout_constraintLeft_toRightOf="@+id/tv_stop_payment_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_stop_payment_label"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_stop_payment">
        <TextView
            android:textSize="@dimen/sp_15"
            android:id="@+id/tv_reply_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处理状态："/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="@color/green_1"
            android:gravity="center"
            android:id="@+id/tv_reply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp_10"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_normal_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tv_case_victim_label,tv_case_victim,tv_victim_id_label,tv_victim_id"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_stop_payment"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tv_stop_payment_label,tv_stop_payment"/>
</androidx.constraintlayout.widget.ConstraintLayout>
