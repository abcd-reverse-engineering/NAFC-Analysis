<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/dp_5"
    android:paddingBottom="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_5">
    <ImageView
        android:id="@+id/iv_portrait"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@mipmap/ic_menber_portrait"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/black_dark"
        android:id="@+id/tv_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="成员"
        app:layout_constraintLeft_toRightOf="@+id/iv_portrait"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textColor="@color/colorWhite"
        android:id="@+id/tv_owner_tag"
        android:background="@drawable/shape_orange_solid"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_2"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="群主"
        app:layout_constraintBottom_toBottomOf="@+id/tv_member_name"
        app:layout_constraintLeft_toRightOf="@+id/tv_member_name"
        app:layout_constraintTop_toTopOf="@+id/tv_member_name"/>
    <TextView
        android:textColor="@color/black_dark"
        android:id="@+id/tv_menber_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="153****2312"
        app:layout_constraintLeft_toLeftOf="@+id/tv_member_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_member_name"/>
    <ImageView
        android:id="@+id/iv_delete"
        android:padding="@dimen/dp_10"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:src="@mipmap/clear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
