<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/rl_type_topic"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/iv_topic_pic"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="17sp"
            android:textColor="#333333"
            android:ellipsize="end"
            android:id="@+id/iv_topic_tit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="警惕!以“新冠疫苗”之名诈骗来袭!"
            android:maxLines="2"
            android:layout_toLeftOf="@+id/iv_topic_pic"
            android:layout_alignTop="@+id/iv_topic_pic"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#999999"
            android:ellipsize="end"
            android:id="@+id/iv_topic_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京市海淀区派出所 2021-01-15"
            android:maxLines="2"
            android:layout_toLeftOf="@+id/iv_topic_pic"
            android:layout_alignBottom="@+id/iv_topic_pic"
            android:layout_alignParentLeft="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/view_line"
        android:background="@color/divide_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>
