<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/page_gray"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="2021-03-08"/>
    <RelativeLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="45dp">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_num_red"
                android:background="@drawable/bg_red"
                android:visibility="invisible"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"/>
            <TextView
                android:textSize="16sp"
                android:textColor="#333333"
                android:id="@+id/tv_note_them"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="功能异常"
                android:maxLines="1"
                android:layout_centerVertical="true"/>
        </LinearLayout>
        <View
            android:background="@color/div_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerInParent="true"/>
        <TextView
            android:textSize="16sp"
            android:textColor="#666666"
            android:ellipsize="end"
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:text="查看详情"
            android:maxLines="1"
            android:layout_below="@+id/ll_type"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/arrow_gray_right"
            android:layout_alignTop="@+id/desc"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</FrameLayout>
