<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/cl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/bg_white_crop"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <TextView
            android:textSize="16sp"
            android:textColor="#333333"
            android:ellipsize="end"
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:maxEms="11"
            android:singleLine="true"/>
        <TextView
            android:textSize="15sp"
            android:textColor="#999999"
            android:id="@+id/tv_acc_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_name"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#666666"
            android:id="@+id/iv_edit"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_edit_light_gray"
            android:layout_toLeftOf="@+id/iv_delete"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#666666"
            android:id="@+id/iv_delete"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_clear"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_arrow"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:src="@mipmap/arrow_gray_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:background="@color/page_gray"
        android:layout_width="match_parent"
        android:layout_height="15dp"/>
</LinearLayout>
