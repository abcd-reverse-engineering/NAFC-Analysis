<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/fl_view"
        android:background="@drawable/bg_white_crop"
        android:paddingTop="8dp"
        android:paddingBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:id="@+id/tv_case_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张王强被诈骗案"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <TextView
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="事主："
                    android:singleLine="true"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:id="@+id/tv_victim_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="张三"
                    android:singleLine="true"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <TextView
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:id="@+id/tv_id_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="证件号（身份证）:"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:gravity="right"
                    android:id="@+id/tv_peop_idcard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="123"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <TextView
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报案时间："/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:id="@+id/tv_peop_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="370000999988883322"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_red_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <TextView
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="处理状态："/>
                <LinearLayout
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:id="@+id/red_tip"
                        android:background="@drawable/bg_red"
                        android:visibility="gone"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginRight="3dp"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:id="@+id/tv_reply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待反馈"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:layout_gravity="right"
        android:id="@+id/iv_item_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:src="@drawable/iv_case_comit"
        android:scaleType="centerCrop"/>
</FrameLayout>
