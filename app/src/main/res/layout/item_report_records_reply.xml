<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_tip"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:src="@mipmap/ic_reply"
        android:layout_marginStart="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="@+id/tv_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_content"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="#1d1a33"
        android:id="@+id/tv_content"
        android:background="@drawable/bg_blue_1"
        android:padding="@dimen/dp_10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:minHeight="@dimen/dp_60"
        android:layout_marginEnd="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@+id/iv_tip"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_10"
        android:textColor="@color/colorGray"
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintLeft_toLeftOf="@+id/tv_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_content"/>
    <View
        android:id="@+id/v_top"
        android:background="#4d2f4cfd"
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/iv_tip"
        app:layout_constraintLeft_toLeftOf="@+id/iv_tip"
        app:layout_constraintRight_toRightOf="@+id/iv_tip"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/v_bottom"
        android:background="#4d2f4cfd"
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/v_top"
        app:layout_constraintTop_toBottomOf="@+id/iv_tip"/>
</androidx.constraintlayout.widget.ConstraintLayout>
