<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/include_audio_new"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_audio"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:src="@mipmap/ic_audio_blue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/img_defraud_play"
        android:background="@drawable/anim_defraud_play"
        android:visibility="gone"
        android:layout_width="10dp"
        android:layout_height="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_audio"
        app:layout_constraintLeft_toLeftOf="@+id/iv_audio"
        app:layout_constraintRight_toRightOf="@+id/iv_audio"
        app:layout_constraintTop_toTopOf="@+id/iv_audio"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/_030303"
        android:ellipsize="end"
        android:id="@+id/tv_audio_name"
        android:padding="@dimen/dp_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="201908124501.wav"
        android:maxLines="2"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toRightOf="@+id/iv_audio"
        app:layout_constraintRight_toLeftOf="@+id/iv_clear"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_size_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_5"
        app:layout_constraintLeft_toLeftOf="@+id/tv_audio_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_audio_name"/>
    <ImageView
        android:id="@+id/iv_clear"
        android:padding="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@mipmap/clear"
        android:scaleType="fitCenter"
        android:layout_marginEnd="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_upload_state"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:text="等待上传"
        app:layout_constraintBottom_toBottomOf="@+id/tv_size_time"
        app:layout_constraintRight_toLeftOf="@+id/iv_clear"
        app:layout_constraintTop_toTopOf="@+id/tv_size_time"/>
    <View
        android:background="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_audio"/>
</androidx.constraintlayout.widget.ConstraintLayout>
