<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/page_gray"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/ll_sms"
        android:background="@drawable/bg_white_crop"
        android:paddingBottom="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <TextView
            android:textSize="14sp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="@drawable/iv_user_tip"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"
            android:paddingRight="8dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="涉诈短信"/>
        <ImageView
            android:id="@+id/iv_clear"
            android:padding="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/clear"
            android:layout_alignParentRight="true"/>
        <TextView
            android:textColor="@color/_030303"
            android:id="@+id/tv_sms_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_42"
            android:text="123123123123123231"
            android:layout_toLeftOf="@+id/tv_time"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/dp_20"/>
        <TextView
            android:textColor="@color/_a3a3a3"
            android:id="@+id/tv_time"
            android:paddingRight="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7/30 10:05:12"
            android:layout_alignTop="@+id/tv_sms_phone"
            android:layout_alignParentRight="true"
            android:paddingEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_20"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_layout"
            android:paddingTop="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sms_phone"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_10">
            <TextView
                android:textColor="#1d1a33"
                android:ellipsize="end"
                android:id="@+id/tv_sms_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每次点开 都能闻到一股走路…"
                android:maxLines="3"
                android:minLines="1"
                android:layout_weight="1"
                android:lineSpacingExtra="3dp"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"/>
</LinearLayout>
