<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_corner_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_5">
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_dark"
        android:id="@+id/tv_transfer_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:text="转账金额：6000元"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_dark"
        android:id="@+id/tv_transfer_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:text="转账记录图片：5张"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_transfer_money"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_dark"
        android:id="@+id/tv_transfer_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:text="转账明细图片：2张"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_transfer_record"/>
    <View
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@+id/tv_transfer_detail"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/colorGray"
        android:id="@+id/tv_transfer_look"
        android:background="@drawable/shape_gray_25"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_5"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_15"
        android:text="查看"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_transfer_detail"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/colorGray"
        android:id="@+id/tv_transfer_delete"
        android:background="@drawable/shape_gray_25"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_5"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:text="删除"
        app:layout_constraintBottom_toBottomOf="@+id/tv_transfer_look"
        app:layout_constraintRight_toLeftOf="@+id/tv_transfer_look"
        app:layout_constraintTop_toTopOf="@+id/tv_transfer_look"/>
</androidx.constraintlayout.widget.ConstraintLayout>
