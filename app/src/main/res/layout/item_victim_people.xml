<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginTop="15dp">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/fl_view"
        android:background="@drawable/iv_victim_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <ImageView
            android:id="@+id/iv_head_sex"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/iv_head"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@+id/iv_head_sex"
            android:layout_centerVertical="true">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:id="@+id/tv_peop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20">
                <TextView
                    android:textSize="10sp"
                    android:textColor="#4763ff"
                    android:background="@drawable/bg_tran_crop_blue_1dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  手机  "/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:id="@+id/tv_peop_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="133333"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <TextView
                    android:textSize="10sp"
                    android:textColor="#4763ff"
                    android:id="@+id/tv_card_type"
                    android:background="@drawable/bg_tran_crop_blue_1dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:ellipsize="end"
                    android:id="@+id/tv_peop_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="370000999988883322"
                    android:singleLine="true"
                    android:layout_centerVertical="true"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_item_det"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_victim_delet"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
