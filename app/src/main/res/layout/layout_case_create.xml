<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_case_create"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/bg_white_crop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15">
        <TextView
            android:textSize="@dimen/dp_20"
            android:textColor="@color/red"
            android:id="@+id/tv_name_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:text="*"
            app:layout_constraintBottom_toBottomOf="@+id/case_line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:id="@+id/tv_name_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="案件名称"
            app:layout_constraintBottom_toBottomOf="@+id/case_line"
            app:layout_constraintLeft_toRightOf="@+id/tv_name_tag"
            app:layout_constraintTop_toTopOf="parent"/>
        <EditText
            android:textSize="@dimen/sp_15"
            android:gravity="center"
            android:id="@+id/et_name"
            android:background="@null"
            android:paddingRight="@dimen/dp_20"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:hint="请输入案件名称"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@+id/case_line"
            app:layout_constraintLeft_toRightOf="@+id/tv_name_lable"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/case_line"
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@+id/et_name"/>
        <TextView
            android:textSize="@dimen/dp_20"
            android:textColor="@color/red"
            android:id="@+id/tv_type_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:text="*"
            app:layout_constraintBottom_toBottomOf="@+id/case_code_line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/case_line"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:id="@+id/tv_type_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="诈骗类型"
            app:layout_constraintBottom_toBottomOf="@+id/case_code_line"
            app:layout_constraintLeft_toLeftOf="@+id/tv_name_lable"
            app:layout_constraintTop_toTopOf="@+id/case_line"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="@color/black_dark"
            android:gravity="center"
            android:id="@+id/tv_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:minHeight="@dimen/dp_35"
            android:hint="请选择诈骗类型"
            android:drawableRight="@mipmap/arrow_gray_right"
            android:drawablePadding="@dimen/dp_15"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@+id/case_code_line"
            app:layout_constraintLeft_toRightOf="@+id/tv_type_lable"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/case_line"/>
        <View
            android:id="@+id/case_code_line"
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@+id/tv_type"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:id="@+id/tv_code_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="采集编号"
            app:layout_constraintBottom_toBottomOf="@+id/case_num_line"
            app:layout_constraintLeft_toLeftOf="@+id/tv_name_lable"
            app:layout_constraintTop_toTopOf="@+id/case_code_line"/>
        <EditText
            android:textSize="@dimen/sp_15"
            android:gravity="center"
            android:id="@+id/et_case_code"
            android:background="@null"
            android:paddingRight="@dimen/dp_20"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:hint="请输入采集编号"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@+id/case_num_line"
            app:layout_constraintLeft_toRightOf="@+id/tv_code_lable"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/case_code_line"/>
        <View
            android:id="@+id/case_num_line"
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@+id/et_case_code"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:enabled="true"
        android:textSize="@dimen/sp_16"
        android:textColor="@drawable/button_textcolor"
        android:gravity="center"
        android:id="@+id/confirm"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/qb_px_30"
        android:layout_marginRight="@dimen/dp_30"
        android:text="确认"
        style="@style/button"/>
</LinearLayout>
