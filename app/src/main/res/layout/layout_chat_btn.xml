<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_chat_btn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_25"
    android:layout_marginBottom="@dimen/dp_25">
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/blue"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_delete"
        android:background="@drawable/shape_blue_25"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_15"
        android:text="删除"
        app:layout_constraintBottom_toBottomOf="@+id/tv_save"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_save"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_save"
        android:background="@drawable/check_update_bg"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="保存"
        app:layout_constraintBottom_toTopOf="@+id/tv_tip"
        app:layout_constraintLeft_toRightOf="@+id/tv_delete"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
