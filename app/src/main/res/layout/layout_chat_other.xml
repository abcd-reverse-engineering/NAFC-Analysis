<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_other"
    android:background="@drawable/dialog_corner_bg"
    android:padding="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15">
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_dark"
        android:gravity="center_vertical"
        android:id="@+id/name_suspect_label"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:text="嫌疑人微信名"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_dark"
        android:id="@+id/et_name_suspect"
        android:background="@null"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:hint="请填写微信名"
        app:layout_constraintBottom_toBottomOf="@+id/name_suspect_label"
        app:layout_constraintLeft_toRightOf="@+id/barrier"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/name_suspect_label"/>
    <View
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintTop_toBottomOf="@+id/name_suspect_label"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_dark"
        android:gravity="center_vertical"
        android:id="@+id/phone_suspect_label"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:text="嫌疑人微信绑定手机号"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_suspect_label"/>
    <EditText
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_dark"
        android:id="@+id/et_phone_suspect"
        android:background="@null"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:hint="请填写手机号"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/phone_suspect_label"
        app:layout_constraintLeft_toRightOf="@+id/barrier"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/phone_suspect_label"/>
    <View
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintTop_toBottomOf="@+id/phone_suspect_label"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_dark"
        android:gravity="center_vertical"
        android:id="@+id/portrait_suspect_label"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:text="嫌疑人头像"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_suspect_label"/>
    <ImageView
        android:id="@+id/iv_portrait_suspect"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_10"
        android:src="@mipmap/ic_add_portrait"
        app:layout_constraintBottom_toBottomOf="@+id/portrait_suspect_label"
        app:layout_constraintLeft_toRightOf="@+id/barrier"
        app:layout_constraintTop_toTopOf="@+id/portrait_suspect_label"/>
    <View
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintTop_toBottomOf="@+id/portrait_suspect_label"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_dark"
        android:gravity="center_vertical"
        android:id="@+id/name_victim_label"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:text="受害人微信名"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/portrait_suspect_label"/>
    <EditText
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_dark"
        android:id="@+id/et_name_victim"
        android:background="@null"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:hint="请填写微信名"
        app:layout_constraintBottom_toBottomOf="@+id/name_victim_label"
        app:layout_constraintLeft_toRightOf="@+id/barrier"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/name_victim_label"/>
    <View
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintTop_toBottomOf="@+id/name_victim_label"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_dark"
        android:gravity="center_vertical"
        android:id="@+id/phone_victim_label"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:text="受害人微信绑定手机号"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_victim_label"/>
    <EditText
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_dark"
        android:id="@+id/et_phone_victim"
        android:background="@null"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:hint="请填写手机号"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/phone_victim_label"
        app:layout_constraintLeft_toRightOf="@+id/barrier"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/phone_victim_label"/>
    <View
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintTop_toBottomOf="@+id/phone_victim_label"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_dark"
        android:gravity="center_vertical"
        android:id="@+id/portrait_victim_label"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:text="受害人头像"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_victim_label"/>
    <ImageView
        android:id="@+id/iv_portrait_victim"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_10"
        android:src="@mipmap/ic_add_portrait"
        app:layout_constraintBottom_toBottomOf="@+id/portrait_victim_label"
        app:layout_constraintLeft_toRightOf="@+id/barrier"
        app:layout_constraintTop_toTopOf="@+id/portrait_victim_label"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="name_suspect_label,phone_suspect_label,portrait_victim_label"/>
</androidx.constraintlayout.widget.ConstraintLayout>
