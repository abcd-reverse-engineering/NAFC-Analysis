<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_virus_time"
    android:background="@drawable/shape_up_round_white"
    android:padding="@dimen/dp_15"
    android:layout_width="match_parent"
    android:layout_height="230dp">
    <TextView
        android:textSize="16sp"
        android:textColor="#333333"
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加其他电子数据"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/cancle"
        android:padding="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_close_gray"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_tip"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_tip">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1">
            <FrameLayout
                android:id="@+id/fl_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="60dp">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/iv_other_char"
                    android:scaleType="fitXY"/>
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/tv_num_chat"
                    android:background="@drawable/bg_survey"
                    android:visibility="gone"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="37dp"
                    android:text=""/>
            </FrameLayout>
            <TextView
                android:textSize="15sp"
                android:textColor="#1d1a33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="其他聊录信息"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1">
            <FrameLayout
                android:id="@+id/fl_trad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="60dp">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/iv_other_trad"
                    android:scaleType="fitXY"/>
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/tv_num_trad"
                    android:background="@drawable/bg_survey"
                    android:visibility="gone"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="37dp"
                    android:text=""/>
            </FrameLayout>
            <TextView
                android:textSize="15sp"
                android:textColor="#1d1a33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="其他转账支付"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
