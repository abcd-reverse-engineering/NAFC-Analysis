<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_touch_container"
    android:background="@drawable/bg_record_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/ivTouchBall_left"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="10dp"
        android:src="@drawable/float_window"/>
    <Chronometer
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:id="@+id/timer"
        android:paddingBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_layout"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/circle_float"
            android:layout_width="50dp"
            android:layout_height="115dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginTop="18dp"
            android:src="@mipmap/btn_home"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:textSize="9sp"
            android:textColor="@color/white"
            android:id="@+id/tv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_3"
            android:text=" 录制页 "
            app:layout_constraintLeft_toLeftOf="@+id/iv_home"
            app:layout_constraintRight_toRightOf="@+id/iv_home"
            app:layout_constraintTop_toBottomOf="@+id/iv_home"/>
        <ImageView
            android:id="@+id/iv_state"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/btn_screen_record"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_home"/>
        <TextView
            android:textSize="9sp"
            android:textColor="@color/white"
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_3"
            android:text="开始录制"
            app:layout_constraintLeft_toLeftOf="@+id/iv_state"
            app:layout_constraintRight_toRightOf="@+id/iv_state"
            app:layout_constraintTop_toBottomOf="@+id/iv_state"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
