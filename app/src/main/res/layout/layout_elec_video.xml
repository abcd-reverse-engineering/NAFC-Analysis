<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/fl_vedio_bg"
        android:background="@drawable/white_corner"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="@color/_333333"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="#999999"
            android:gravity="center"
            android:id="@+id/tv_upload_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_15"
            android:text="请选择"
            android:lines="1"
            android:drawableRight="@mipmap/arrow_gray_right"
            android:drawablePadding="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_100"/>
    </FrameLayout>
    <FrameLayout
        android:background="#fff9f8"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="#999999"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无法直接上传线索"/>
        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="#2946e6"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_record_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:text="录制帮助"/>
        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="#ee2222"
            android:gravity="center"
            android:layout_gravity="right"
            android:id="@+id/tv_record"
            android:background="@drawable/bg_record_now"
            android:layout_width="89dp"
            android:layout_height="32dp"
            android:text="立即录制"/>
    </FrameLayout>
</LinearLayout>
