<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_risk_btn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/dark_orange"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_delete"
        android:background="@drawable/shape_orange_25"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="@+id/tv_report"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_report"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_report"
        android:background="@drawable/button_bg_red"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="一键举报"
        app:layout_constraintBottom_toTopOf="@+id/cb_tip"
        app:layout_constraintLeft_toRightOf="@+id/tv_delete"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:id="@+id/check_img"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:src="@mipmap/checkbox_checked_red"
        app:layout_constraintBottom_toBottomOf="@+id/cb_tip"
        app:layout_constraintLeft_toLeftOf="@+id/cb_tip"
        app:layout_constraintTop_toTopOf="@+id/cb_tip"/>
    <CheckBox
        android:textSize="@dimen/dp_12"
        android:textColor="@color/colorGray"
        android:id="@+id/cb_tip"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:checked="true"
        android:button="@color/transparent"
        android:text="举报后清除可疑应用和安装包"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
