<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_risk_btn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        app:layout_constraintBottom_toTopOf="@+id/tv_tip_appeal"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_13"
        android:textColor="#fe0000"
        android:id="@+id/tv_tip_appeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:text="如检测结果有误，您可手动上报错误信息"
        android:alpha="0.8"
        app:layout_constraintBottom_toTopOf="@+id/ll_appeal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:id="@+id/ll_appeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tip_appeal">
        <TextView
            android:textSize="@dimen/sp_18"
            android:textColor="@color/blue_dark"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_appeal"
            android:background="@drawable/button_bg_blue_ligth_1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="10dp"
            android:text="错误上报"
            android:layout_weight="1"/>
        <TextView
            android:textSize="@dimen/sp_18"
            android:textColor="@color/blue_dark"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_appeal_wb"
            android:background="@drawable/button_bg_blue_ligth_1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="10dp"
            android:text="误报申诉"
            android:layout_weight="1"/>
        <TextView
            android:textSize="@dimen/sp_18"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_delete"
            android:background="@drawable/button_bg_blue_gradient"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:text="一键清除"
            android:layout_weight="1"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>
