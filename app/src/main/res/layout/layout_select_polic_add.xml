<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_virus_time"
    android:background="@drawable/shape_up_round_white"
    android:padding="@dimen/dp_15"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_dark"
        android:id="@+id/cancle"
        android:padding="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_dark"
        android:id="@+id/confirm"
        android:padding="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_dark"
        android:id="@+id/tv_privence"
        android:padding="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="请选择省"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cancle"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_dark"
        android:id="@+id/tv_city"
        android:padding="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="请选择市"
        app:layout_constraintLeft_toRightOf="@+id/tv_privence"
        app:layout_constraintTop_toBottomOf="@+id/cancle"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_dark"
        android:id="@+id/tv_substat"
        android:padding="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="请选择分局"
        app:layout_constraintLeft_toRightOf="@+id/tv_city"
        app:layout_constraintTop_toBottomOf="@+id/cancle"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_dark"
        android:id="@+id/tv_polic_state"
        android:padding="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="请选择派出所"
        app:layout_constraintLeft_toRightOf="@+id/tv_substat"
        app:layout_constraintTop_toBottomOf="@+id/cancle"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintTop_toBottomOf="@+id/tv_privence"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/black_dark"
        android:gravity="center"
        android:id="@+id/tv_load"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载中..."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
