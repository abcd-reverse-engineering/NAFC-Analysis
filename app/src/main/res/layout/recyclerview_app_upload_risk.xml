<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_sms"
    android:paddingBottom="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/_030303"
        android:id="@+id/tv_app_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="应用名称应用名称"
        android:maxLength="6"
        android:layout_marginStart="@dimen/dp_15"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toRightOf="@+id/app_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.25"/>
    <TextView
        android:textColor="@color/colorRedRiskFlag"
        android:id="@+id/tv_upload_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:text="上传失败"
        app:layout_constraintBottom_toBottomOf="@+id/tv_app_name"
        app:layout_constraintLeft_toRightOf="@+id/tv_app_name"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/_a3a3a3"
        android:id="@+id/tv_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="v1.1.2"
        app:layout_constraintLeft_toLeftOf="@+id/tv_app_name"
        app:layout_constraintLeft_toRightOf="@+id/app_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_app_name"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/dark_orange"
        android:id="@+id/tv_level"
        android:background="@drawable/shape_orange"
        android:paddingLeft="@dimen/dp_5"
        android:paddingTop="@dimen/dp_2"
        android:paddingRight="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="@+id/tv_app_name"
        app:layout_constraintRight_toLeftOf="@+id/iv_checkbox"/>
    <ImageView
        android:id="@+id/iv_checkbox"
        android:layout_width="@dimen/dp_23"
        android:layout_height="@dimen/dp_23"
        android:src="@mipmap/ic_scan_wait"
        android:scaleType="fitCenter"
        android:layout_marginEnd="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="@+id/tv_app_name"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
