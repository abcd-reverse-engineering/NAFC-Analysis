<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/card_corner_white_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:minHeight="50dp">
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/colorGray"
        android:id="@+id/tv_victim_phone_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="受害人电话："
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/_030303"
        android:id="@+id/tv_victim_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        app:layout_constraintLeft_toRightOf="@+id/tv_victim_phone_label"
        app:layout_constraintTop_toTopOf="@+id/tv_victim_phone_label"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/colorGray"
        android:id="@+id/tv_phone_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="诈骗电话："
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_victim_phone"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/_030303"
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        app:layout_constraintLeft_toRightOf="@+id/tv_phone_label"
        app:layout_constraintTop_toTopOf="@+id/tv_phone_label"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/colorGray"
        android:id="@+id/tv_occur_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="通话时间："
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone_label"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/_030303"
        android:id="@+id/tv_occur_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        app:layout_constraintLeft_toRightOf="@+id/tv_occur_time_label"
        app:layout_constraintTop_toTopOf="@+id/tv_occur_time_label"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/colorGray"
        android:id="@+id/tv_duration_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="通话时长："
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_occur_time_label"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/_030303"
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        app:layout_constraintLeft_toRightOf="@+id/tv_duration_label"
        app:layout_constraintTop_toTopOf="@+id/tv_duration_label"/>
    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_25"
        android:src="@mipmap/ic_edit"
        android:layout_marginEnd="@dimen/dp_15"
        app:layout_constraintBottom_toTopOf="@+id/iv_clear"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>
    <ImageView
        android:id="@+id/iv_clear"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:src="@mipmap/clear"
        android:layout_marginEnd="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_edit"/>
    <View
        android:background="@color/line_color"
        android:layout_width="@dimen/dp_1"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_clear"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_victim"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tv_victim_phone_label,tv_victim_phone,iv_edit"/>
</androidx.constraintlayout.widget.ConstraintLayout>
