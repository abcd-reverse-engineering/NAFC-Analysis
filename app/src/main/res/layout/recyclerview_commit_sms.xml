<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_sms"
    android:background="@drawable/card_corner_white_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:minHeight="50dp">
    <TextView
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_type_sms"
        android:background="@mipmap/ic_bg_sms"
        android:paddingRight="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:minWidth="@dimen/dp_100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/black_dark"
        android:ellipsize="end"
        android:id="@+id/tv_sms_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:lines="1"
        android:singleLine="true"
        android:layout_marginStart="@dimen/dp_15"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_type_sms"
        app:layout_constraintWidth_max="190dp"/>
    <TextView
        android:textSize="@dimen/sp_10"
        android:textColor="#8092f3"
        android:id="@+id/tv_tag"
        android:background="@drawable/bg_crop_blue"
        android:padding="@dimen/dp_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_3"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/tv_sms_phone"
        app:layout_constraintLeft_toRightOf="@+id/tv_sms_phone"
        app:layout_constraintTop_toTopOf="@+id/tv_sms_phone"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/black_light"
        android:ellipsize="end"
        android:id="@+id/tv_sms_content"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_50"
        android:lines="4"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toLeftOf="@+id/tv_sms_phone"
        app:layout_constraintRight_toLeftOf="@+id/iv_right"
        app:layout_constraintTop_toBottomOf="@+id/tv_sms_phone"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/black_light"
        android:ellipsize="end"
        android:id="@+id/tv_victim_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_15"
        android:singleLine="true"
        android:layout_marginEnd="@dimen/dp_8"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/tv_sms_phone"
        app:layout_constraintRight_toLeftOf="@+id/tv_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_sms_content"/>
    <TextView
        android:textSize="@dimen/sp_10"
        android:textColor="@color/colorGray"
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="@+id/tv_victim_phone"
        app:layout_constraintRight_toRightOf="@+id/iv_right"
        app:layout_constraintTop_toTopOf="@+id/tv_victim_phone"/>
    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_3"
        android:src="@mipmap/arrow_gray_right"
        android:scaleType="fitCenter"
        android:layout_marginEnd="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
