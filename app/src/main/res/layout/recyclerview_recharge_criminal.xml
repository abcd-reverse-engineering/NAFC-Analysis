<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/card_corner_white_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:minHeight="50dp">
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/colorGray"
        android:id="@+id/tv_recharge_plat_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="充值平台："
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/_030303"
        android:ellipsize="end"
        android:id="@+id/tv_recharge_plat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxWidth="180dp"
        android:singleLine="true"
        app:layout_constraintLeft_toRightOf="@+id/tv_recharge_plat_label"
        app:layout_constraintRight_toLeftOf="@+id/v_line"
        app:layout_constraintTop_toTopOf="@+id/tv_recharge_plat_label"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/colorGray"
        android:id="@+id/tv_phone_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="充值手机号："
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_recharge_plat"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/_030303"
        android:ellipsize="end"
        android:id="@+id/tv_recharge_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="180dp"
        android:maxLines="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_phone_label"
        app:layout_constraintTop_toTopOf="@+id/tv_phone_label"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/colorGray"
        android:id="@+id/tv_recharge_sum_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="充值金额："
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone_label"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/_030303"
        android:id="@+id/tv_recharge_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tv_recharge_sum_label"
        app:layout_constraintTop_toTopOf="@+id/tv_recharge_sum_label"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/colorGray"
        android:id="@+id/tv_recharge_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="充值时间："
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_recharge_sum_label"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/_030303"
        android:id="@+id/tv_recharge_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tv_recharge_time_label"
        app:layout_constraintTop_toTopOf="@+id/tv_recharge_time_label"/>
    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="@dimen/dp_23"
        android:layout_height="@dimen/dp_23"
        android:layout_marginBottom="@dimen/dp_18"
        android:src="@mipmap/ic_edit_light_gray"
        android:layout_marginEnd="@dimen/dp_15"
        app:layout_constraintBottom_toTopOf="@+id/iv_clear"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>
    <ImageView
        android:id="@+id/iv_clear"
        android:layout_width="@dimen/dp_23"
        android:layout_height="@dimen/dp_23"
        android:src="@mipmap/ic_clear"
        android:layout_marginEnd="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_edit"/>
    <View
        android:id="@+id/v_line"
        android:background="@color/line_color"
        android:layout_width="@dimen/dp_1"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_clear"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/iv_arrow"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:src="@mipmap/arrow_gray_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
