<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_sms"
    android:background="@drawable/card_corner_white_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:minHeight="50dp">
    <TextView
        android:textColor="@color/_030303"
        android:id="@+id/tv_sms_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="123123123123123231"
        android:layout_toLeftOf="@+id/tv_time"
        android:layout_marginStart="@dimen/dp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textColor="@color/_a3a3a3"
        android:id="@+id/tv_time"
        android:paddingRight="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7/30 10:05:12"
        android:paddingEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_20"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_sms_phone"/>
    <TextView
        android:textColor="@color/_a3a3a3"
        android:ellipsize="end"
        android:id="@+id/tv_sms_content"
        android:paddingBottom="@dimen/dp_15"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:text="【极速贷】骗短信骗过吗 小编每年会收到二三百条诈骗短信 每次点开 都能闻到一股走路…"
        android:maxLines="2"
        android:lines="2"
        android:minLines="1"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toLeftOf="@+id/tv_sms_phone"
        app:layout_constraintRight_toLeftOf="@+id/iv_clear"
        app:layout_constraintTop_toBottomOf="@+id/tv_sms_phone"/>
    <TextView
        android:textColor="@color/_a3a3a3"
        android:id="@+id/tv_victim_phone"
        android:paddingRight="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/tv_sms_phone"
        app:layout_constraintTop_toBottomOf="@+id/tv_sms_content"/>
    <ImageView
        android:id="@+id/iv_edit"
        android:visibility="gone"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:src="@mipmap/ic_edit"
        android:scaleType="fitCenter"
        android:layout_marginEnd="@dimen/dp_15"
        app:layout_constraintBottom_toTopOf="@+id/iv_clear"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sms_phone"/>
    <ImageView
        android:id="@+id/iv_clear"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:src="@mipmap/clear"
        android:layout_marginEnd="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_edit"/>
    <View
        android:background="@color/eeeeee"
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_below="@+id/ll_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_clear"
        app:layout_constraintTop_toBottomOf="@+id/tv_sms_phone"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_victim"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="iv_edit,tv_victim_phone"/>
</androidx.constraintlayout.widget.ConstraintLayout>
