<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_sms"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_20">
        <TextView
            android:textColor="@color/_030303"
            android:id="@+id/tv_sms_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/aeaeae"
            android:id="@+id/tv_sms_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_60"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20">
        <TextView
            android:textColor="@color/_a3a3a3"
            android:ellipsize="end"
            android:id="@+id/tv_sms_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【极速贷】骗短信骗过吗 小编每年会收到二三百条诈骗短信 每次点开 都能闻到一股走路…"
            android:maxLines="2"
            android:lines="2"
            android:minLines="1"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_checkbox"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/checkbox_unchecked"
            android:layout_marginStart="@dimen/dp_10"/>
    </LinearLayout>
    <View
        android:background="@color/eeeeee"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_15"/>
</LinearLayout>
