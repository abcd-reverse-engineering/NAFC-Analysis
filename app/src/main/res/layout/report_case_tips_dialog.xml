<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/layout"
        android:background="@drawable/dialog_corner_bg"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:id="@+id/dialog_title"
            android:padding="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="案件啊"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:minHeight="30dp">
            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15sp"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报案时间："/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:gravity="right"
                    android:id="@+id/tv_report_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020-12-24 10:24:26"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="采集编号："/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:gravity="right"
                    android:id="@+id/tv_case_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="J446433789779"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15sp"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="诈骗类型："/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:gravity="right"
                    android:id="@+id/tv_polic_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1324324"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:background="@color/div_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <Button
                android:textSize="16sp"
                android:textColor="#2b4cff"
                android:id="@+id/cancel_btn"
                android:background="@drawable/left_btn_select"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="放弃"
                android:layout_weight="1"/>
            <LinearLayout
                android:background="@color/div_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <Button
                android:textSize="16sp"
                android:textColor="#2b4cff"
                android:id="@+id/confirm_btn"
                android:background="@drawable/right_btn_select"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="开始填写"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
