<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_item"
    android:background="@drawable/card_corner_white_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:minHeight="50dp">
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/colorGray"
        android:id="@+id/tv_victim_phone_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="受害人电话："
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/_030303"
        android:ellipsize="end"
        android:id="@+id/tv_victim_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        app:layout_constraintLeft_toRightOf="@+id/tv_victim_phone_label"
        app:layout_constraintTop_toTopOf="@+id/tv_victim_phone_label"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/colorGray"
        android:id="@+id/tv_phone_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="诈骗电话："
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_victim_phone"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/_030303"
        android:ellipsize="end"
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="130dp"
        android:maxLines="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_phone_label"
        app:layout_constraintTop_toTopOf="@+id/tv_phone_label"/>
    <TextView
        android:textSize="@dimen/sp_10"
        android:textColor="#8092f3"
        android:id="@+id/tv_phone_type"
        android:background="@drawable/shape_gray_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="@+id/tv_phone"
        app:layout_constraintLeft_toRightOf="@+id/tv_phone"
        app:layout_constraintTop_toTopOf="@+id/tv_phone"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/colorGray"
        android:id="@+id/tv_occur_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="通话时间："
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone_label"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/_030303"
        android:id="@+id/tv_occur_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tv_occur_time_label"
        app:layout_constraintTop_toTopOf="@+id/tv_occur_time_label"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/colorGray"
        android:id="@+id/tv_duration_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="通话时长："
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_occur_time_label"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/_030303"
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tv_duration_label"
        app:layout_constraintTop_toTopOf="@+id/tv_duration_label"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_victim"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tv_victim_phone_label,tv_victim_phone"/>
    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:src="@mipmap/arrow_gray_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
