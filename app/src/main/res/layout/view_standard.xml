<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/page_gray"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp">
    <TextView
        android:textSize="18sp"
        android:textColor="#333333"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="风险自查"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_virus_check"
        android:background="@drawable/card_corner_white_bg"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_75"
        android:layout_marginTop="@dimen/qb_px_10"
        android:paddingStart="@dimen/dp_15"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cl_fraud_check"
        app:layout_constraintTop_toBottomOf="@+id/tv_title">
        <TextView
            android:textSize="14sp"
            android:textColor="#1c283f"
            android:id="@+id/tv_virus_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APP自检"
            app:layout_constraintBottom_toTopOf="@+id/tv_desc"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>
        <TextView
            android:textSize="11sp"
            android:textColor="#666666"
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机自测可疑APP"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/tv_virus_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_virus_title"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/iv_scaov_bg"
            android:scaleType="centerCrop"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/iv_img"
            android:visibility="visible"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:src="@drawable/iv_fraud_check"
            android:scaleType="fitCenter"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ViewStub
            android:id="@+id/stub_animation"
            android:layout="@layout/item_standard_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_fraud_check"
        android:background="@drawable/card_corner_white_bg"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_75"
        android:layout_marginTop="@dimen/qb_px_10"
        android:paddingStart="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_4"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintLeft_toRightOf="@+id/cl_virus_check"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title">
        <TextView
            android:textSize="14sp"
            android:textColor="#1c283f"
            android:id="@+id/tv_fraud_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风险查询"
            app:layout_constraintBottom_toTopOf="@+id/tv_fraud_desc"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>
        <TextView
            android:textSize="11sp"
            android:textColor="#666666"
            android:id="@+id/tv_fraud_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付社交账号核验"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/tv_fraud_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_fraud_title"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/iv_scaov_bg"
            android:scaleType="centerCrop"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:src="@drawable/iv_virus_check"
            android:scaleType="fitCenter"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
